@using RestaurantManager.Models
@model IEnumerable<RestaurantManager.Models.Order>
@{
    ViewData["Title"] = "Archiwum Zamówień";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <div>
        <h2 class="fw-bold mb-0">Archiwum Zamówień</h2>
        <p class="text-muted small mb-0">Historia wszystkich zakończonych transakcji.</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-dark rounded-pill px-4 shadow-sm">
        <i class="bi bi-arrow-left me-2"></i> Wróć do POS
    </a>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-uppercase text-muted small">
                    <tr>
                        <th class="ps-4 py-3">#ID</th>
                        <th>Data</th>
                        <th>Typ</th>
                        <th>Klient / Stolik</th>
                        <th class="text-end">Kwota</th>
                        <th>Płatność</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">Brak zamówień w archiwum.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">#@order.Id</td>
                                <td>
                                    <div class="fw-medium">@order.ScheduledDate.ToString("dd.MM.yyyy")</div>
                                    <small class="text-muted">@order.ScheduledDate.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @if (order.Type == OrderType.DineIn)
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info rounded-pill px-2">
                                            <i class="bi bi-shop me-1"></i> Lokal
                                        </span>
                                    }
                                    else if (order.Type == OrderType.Delivery)
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning border border-warning rounded-pill px-2">
                                            <i class="bi bi-truck me-1"></i> Dostawa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary rounded-pill px-2">
                                            <i class="bi bi-bag me-1"></i> Wynos
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (order.Table != null)
                                    {
                                        <span class="fw-bold">@order.Table.Name</span>
                                    }
                                    else
                                    {
                                        <div class="fw-medium">@order.CustomerName</div>
                                    }
                                </td>
                                <td class="text-end fw-bold">@order.TotalAmount.ToString("C")</td>
                                <td>
                                    @if (order.PaymentMethod == PaymentMethod.Card)
                                    {
                                        <span><i class="bi bi-credit-card text-primary me-1"></i> Karta</span>
                                    }
                                    else
                                    {
                                        <span><i class="bi bi-cash-coin text-success me-1"></i> Gotówka</span>
                                    }
                                </td>
                                <td>
                                    @if (order.Status == OrderStatus.Completed)
                                    {
                                        <span class="badge bg-success rounded-pill">Zakończone</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger rounded-pill">Anulowane</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Receipt" asp-route-id="@order.Id" target="_blank" class="btn btn-sm btn-light border rounded-3" title="Drukuj Rachunek">
                                        <i class="bi bi-receipt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>