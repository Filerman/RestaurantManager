@using RestaurantManager.Models
@model IEnumerable<RestaurantManager.Models.Order>
@{
    ViewData["Title"] = "Archiwum Zamówień";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Archiwum Zamówień</h2>
        <a asp-action="Index" class="btn btn-outline-primary">Wróć do POS (Aktywne)</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>#ID</th>
                            <th>Data</th>
                            <th>Typ</th>
                            <th>Klient / Stolik</th>
                            <th>Kwota</th>
                            <th>Płatność</th>
                            <th>Status</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.ScheduledDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (order.Type == OrderType.DineIn)
                                    {
                                        <span class="badge bg-info text-dark">Stolik</span>
                                    }
                                    else if (order.Type == OrderType.Delivery)
                                    {

                                        <span class="badge bg-warning text-dark">Dostawa</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">Wynos</span>
                                    }
                                </td>
                                <td>
                                    @if (order.Table != null)
                                    {
                                        <strong>@order.Table.Name</strong>
                                    }
                                    else
                                    {

                                        @order.CustomerName
                                    }
                                </td>
                                <td>@order.TotalAmount.ToString("C")</td>
                                <td>@order.PaymentMethod</td>
                                <td>
                                    @if (order.Status == OrderStatus.Completed)
                                    {
                                        <span class="text-success fw-bold">Zakończone</span>
                                    }
                                    else
                                    {

                                        <span class="text-danger fw-bold">Anulowane</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Receipt" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary" title="Zobacz Rachunek">
                                        <i class="bi bi-receipt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>