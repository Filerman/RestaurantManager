@model IEnumerable<RestaurantManager.Models.Table>
@{
    ViewData["Title"] = "Mapa Stolików";
    List<int> busyTables = ViewBag.BusyTableIds as List<int> ?? new List<int>();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Mapa Stolików</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Wróć do listy zamówień (POS)
        </a>
    </div>

    <div class="row">
        @foreach (var table in Model)
        {
            bool isBusy = busyTables.Contains(table.Id);
            string cardClass = isBusy ? "bg-danger text-white" : "bg-success text-white";
            string statusText = isBusy ? "ZAJĘTY" : "WOLNY";

            <div class="col-6 col-md-4 col-lg-3 mb-4">
                <a asp-action="ManageTable" asp-route-id="@table.Id" class="text-decoration-none">
                    <div class="card @cardClass shadow text-center h-100 table-card">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center" style="min-height: 150px;">
                            <h3 class="display-6">@table.Name</h3>
                            <p class="fs-5">Osoby: @table.Capacity</p>
                            <span class="badge bg-light text-dark mt-2">@statusText</span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>