@model RestaurantManager.ViewModels.ManageTableViewModel

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-4 border-end">
            <div class="sticky-top pt-3" style="top: 20px; z-index: 1;">
                <h3>@Model.Table.Name <span class="text-muted fs-6">(@Model.Table.Capacity os.)</span></h3>

                @if (Model.CurrentOrder == null)
                {
                    <div class="alert alert-info">Stolik jest wolny. Dodaj pierwszą pozycję, aby otworzyć rachunek.</div>
                }
                else
                {
                    <div class="card mb-3 shadow-sm">
                        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                            <span>Rachunek #@Model.CurrentOrder.Id</span>
                            <span class="badge bg-light text-dark">@Model.CurrentOrder.Status</span>
                        </div>

                        <div class="list-group list-group-flush">
                            @foreach (var item in Model.CurrentOrder.OrderItems)
                            {
                                // Style w zależności czy wydano
                                var itemClass = item.IsServed ? "bg-light text-muted" : "";
                                var btnIcon = item.IsServed ? "bi-arrow-counterclockwise" : "bi-check-lg";
                                var btnClass = item.IsServed ? "btn-outline-secondary" : "btn-success";
                                var btnTitle = item.IsServed ? "Cofnij wydanie" : "Oznacz jako wydane";

                                <div class="list-group-item d-flex justify-content-between align-items-center @itemClass">
                                    <div class="me-2">
                                        <div class="fw-bold">
                                            @item.Quantity x @item.MenuItem.Name
                                            @if (item.IsServed)
                                            {
                                                <i class="bi bi-check-circle-fill text-success ms-1" title="Wydano"></i>
                                            }
                                        </div>
                                        <small>@((item.UnitPrice * item.Quantity).ToString("C"))</small>
                                    </div>

                                    <form asp-action="ToggleItemServed" method="post">
                                        <input type="hidden" name="orderItemId" value="@item.Id" />
                                        <input type="hidden" name="tableId" value="@Model.Table.Id" />

                                        <button type="submit" class="btn @btnClass btn-sm rounded-circle" style="width: 32px; height: 32px; padding: 0;" title="@btnTitle">
                                            <i class="bi @btnIcon"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>

                        <div class="card-footer text-end">
                            <h4>Razem: @Model.CurrentOrder.TotalAmount.ToString("C")</h4>
                        </div>
                    </div>

                    <form asp-action="CloseTable" method="post" class="d-grid gap-2">
                        <input type="hidden" name="orderId" value="@Model.CurrentOrder.Id" />
                        <button type="submit" name="paymentMethod" value="Cash" class="btn btn-success btn-lg">Zapłać Gotówką i Zamknij</button>
                        <button type="submit" name="paymentMethod" value="Card" class="btn btn-primary btn-lg">Zapłać Kartą i Zamknij</button>
                    </form>
                }

                <div class="mt-3">
                    <a asp-action="Tables" class="btn btn-secondary w-100">Wróć do mapy stolików</a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h3 class="pt-3">Dodaj do zamówienia</h3>

            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                @for (int i = 0; i < Model.Categories.Count; i++)
                {
                    var cat = Model.Categories[i];
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @(i == 0 ? "active" : "")" id="pills-@i-tab" data-bs-toggle="pill" data-bs-target="#pills-@i" type="button" role="tab">
                            @cat
                        </button>
                    </li>
                }
            </ul>

            <div class="tab-content" id="pills-tabContent">
                @for (int i = 0; i < Model.Categories.Count; i++)
                {
                    var cat = Model.Categories[i];
                    var items = Model.MenuItems.Where(m => m.Category == cat).ToList();

                    <div class="tab-pane fade @(i == 0 ? "show active" : "")" id="pills-@i" role="tabpanel">
                        <div class="row">
                            @foreach (var item in items)
                            {
                                <div class="col-sm-6 col-lg-4 mb-3">
                                    <form asp-action="AddToTable" method="post">
                                        <input type="hidden" name="tableId" value="@Model.Table.Id" />
                                        <input type="hidden" name="menuItemId" value="@item.Id" />

                                        <button type="submit" class="btn btn-outline-dark w-100 h-100 p-3 text-start shadow-sm hover-shadow">
                                            <div class="d-flex justify-content-between">
                                                <span class="fw-bold">@item.Name</span>
                                                <span class="badge bg-success">@item.Price.ToString("F2") zł</span>
                                            </div>
                                            <small class="text-muted">@item.Description</small>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>