@model RestaurantManager.ViewModels.ManageTableViewModel
@{
    ViewData["Title"] = $"Obsługa - {Model.Table.Name}";

    string activeCategory = ViewBag.ActiveCategory as string;
    int activeIndex = 0;
    if (!string.IsNullOrEmpty(activeCategory))
    {
        activeIndex = Model.Categories.IndexOf(activeCategory);
        if (activeIndex == -1) activeIndex = 0;
    }

    bool hasUnservedItems = Model.CurrentOrder != null && Model.CurrentOrder.OrderItems.Any(i => !i.IsServed);
}

<div class="container-fluid h-100 p-0">
    <div class="row g-0 h-100">

        <div class="col-md-4 col-lg-3 border-end bg-white d-flex flex-column h-100 shadow position-relative" style="z-index: 10;">
            <div class="p-3 bg-light border-bottom d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="fw-bold mb-0">@Model.Table.Name</h4>
                    <small class="text-muted">Pojemność: @Model.Table.Capacity os.</small>
                </div>
                <a asp-action="Tables" class="btn btn-outline-secondary btn-sm rounded-pill"><i class="bi bi-x-lg"></i></a>
            </div>

            <div class="flex-grow-1 overflow-auto p-0 bg-light" style="max-height: calc(100vh - 250px);">
                @if (Model.CurrentOrder == null)
                {
                    <div class="text-center p-5 text-muted">
                        <i class="bi bi-basket fs-1 mb-2 d-block opacity-25"></i>
                        Stolik jest wolny.<br>Dodaj pozycję, aby otworzyć rachunek.
                    </div>
                }
                else
                {
                    <div class="list-group list-group-flush">
                        <div class="list-group-item bg-dark text-white d-flex justify-content-between align-items-center py-2 px-3 small">
                            <span>Rachunek #@Model.CurrentOrder.Id</span>
                            <span class="badge bg-light text-dark">@Model.CurrentOrder.Status</span>
                        </div>

                        @foreach (var item in Model.CurrentOrder.OrderItems)
                        {
                            var itemBg = item.IsServed ? "bg-white" : "bg-warning bg-opacity-10";
                            var opacity = item.IsServed ? "opacity-75" : "";

                            <div class="list-group-item @itemBg @opacity border-bottom p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="fw-bold text-dark">@item.Quantity x @item.MenuItem.Name</span>
                                    <span class="fw-bold">@((item.UnitPrice * item.Quantity).ToString("C"))</span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">@item.UnitPrice.ToString("C") / szt.</small>

                                    <form asp-action="ToggleItemServed" method="post">
                                        <input type="hidden" name="orderItemId" value="@item.Id" />
                                        <input type="hidden" name="tableId" value="@Model.Table.Id" />
                                        @if (item.IsServed)
                                        {
                                            <button type="submit" class="btn btn-outline-secondary btn-sm py-0 px-2 rounded-pill small" title="Cofnij wydanie">
                                                <i class="bi bi-arrow-counterclockwise me-1"></i> Cofnij
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-success btn-sm py-0 px-2 rounded-pill small fw-bold shadow-sm" title="Oznacz jako wydane">
                                                <i class="bi bi-check-lg me-1"></i> Wydaj
                                            </button>
                                        }
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            @if (Model.CurrentOrder != null)
            {
                <div class="border-top p-3 bg-white mt-auto">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted text-uppercase fw-bold small ls-1">Do zapłaty:</span>
                        <h2 class="fw-bold text-success mb-0">@Model.CurrentOrder.TotalAmount.ToString("C")</h2>
                    </div>

                    <form asp-action="CloseTable" method="post" class="d-grid gap-2" target="_blank" id="closeTableForm">
                        <input type="hidden" name="orderId" value="@Model.CurrentOrder.Id" />
                        <button type="submit" name="paymentMethod" value="Cash" class="btn btn-success fw-bold py-2 shadow-sm">
                            <i class="bi bi-cash-coin me-2"></i> Gotówka
                        </button>
                        <button type="submit" name="paymentMethod" value="Card" class="btn btn-primary fw-bold py-2 shadow-sm">
                            <i class="bi bi-credit-card me-2"></i> Karta
                        </button>
                    </form>
                </div>
            }
        </div>

        <div class="col-md-8 col-lg-9 bg-light h-100 d-flex flex-column">

            <div class="p-3 bg-white border-bottom shadow-sm overflow-auto">
                <ul class="nav nav-pills flex-nowrap gap-2" id="pills-tab" role="tablist">
                    @for (int i = 0; i < Model.Categories.Count; i++)
                    {
                        var cat = Model.Categories[i];
                        bool isActive = (i == activeIndex);
                        string activeClass = isActive ? "active" : "";

                        <li class="nav-item" role="presentation">
                            <button class="nav-link rounded-pill border px-4 text-nowrap fw-bold transition-all @activeClass"
                                    id="pills-@i-tab"
                                    data-bs-toggle="pill"
                                    data-bs-target="#pills-@i"
                                    type="button"
                                    role="tab">
                                @cat
                            </button>
                        </li>
                    }
                </ul>
            </div>

            <div class="flex-grow-1 overflow-auto p-4">
                <div class="tab-content" id="pills-tabContent">
                    @for (int i = 0; i < Model.Categories.Count; i++)
                    {
                        var cat = Model.Categories[i];
                        var items = Model.MenuItems.Where(m => m.Category == cat).ToList();
                        bool isActive = (i == activeIndex);
                        string showActive = isActive ? "show active" : "";

                        <div class="tab-pane fade @showActive" id="pills-@i" role="tabpanel">
                            <div class="row g-3">
                                @foreach (var item in items)
                                {
                                    <div class="col-6 col-md-4 col-xl-3">
                                        <form asp-action="AddToTable" method="post" class="h-100">
                                            <input type="hidden" name="tableId" value="@Model.Table.Id" />
                                            <input type="hidden" name="menuItemId" value="@item.Id" />
                                            <input type="hidden" name="returnCategory" value="@cat" />

                                            <button type="submit" class="btn btn-white border w-100 h-100 p-3 text-start shadow-sm hover-lift position-relative rounded-4 d-flex flex-column justify-content-between">
                                                <div class="w-100">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <span class="fw-bold text-dark lh-sm">@item.Name</span>
                                                        <span class="badge bg-success bg-opacity-10 text-success border border-success ms-2">@item.Price.ToString("F0")</span>
                                                    </div>
                                                    <small class="text-muted d-block lh-sm text-truncate-2">@item.Description</small>
                                                </div>
                                                <div class="mt-3 text-end w-100 text-primary opacity-25 hover-full-opacity transition">
                                                    <i class="bi bi-plus-circle-fill fs-4"></i>
                                                </div>
                                            </button>
                                        </form>
                                    </div>
                                }
                                @if (!items.Any())
                                {
                                    <div class="col-12 text-center text-muted mt-5">
                                        <i class="bi bi-folder-x fs-1 opacity-25"></i>
                                        <p class="mt-2">Brak produktów w tej kategorii.</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="unservedItemsModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow-lg">
            <div class="modal-body p-4 text-center">
                <div class="mb-3 text-warning">
                    <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem;"></i>
                </div>
                <h4 class="fw-bold mb-3">Nie wszystkie dania wydano!</h4>
                <p class="text-muted mb-4">
                    Na rachunku znajdują się pozycje, które nie zostały oznaczone jako "Wydane" (zielony przycisk).<br />
                    Upewnij się, że kuchnia wydała wszystko przed zamknięciem stolika.
                </p>
                <div class="d-grid">
                    <button type="button" class="btn btn-secondary rounded-pill fw-bold" data-bs-dismiss="modal">Wróć i sprawdź</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-pills .nav-link {
        color: #212529; 
        background-color: #fff; 
        border-color: #dee2e6 !important; 
    }

        .nav-pills .nav-link.active {
            background-color: #212529 !important; 
            color: #fff !important; 
            border-color: #212529 !important;
            box-shadow: 0 4px 6px rgba(0,0,0,0.15); 
        }

    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .hover-lift:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        border-color: var(--bs-primary) !important;
    }

    .hover-lift:active {
        transform: translateY(0);
    }

    .hover-full-opacity:hover {
        opacity: 1 !important;
    }

    .transition {
        transition: all 0.2s;
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .modal-backdrop.show {
        opacity: 0.7;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var form = document.getElementById('closeTableForm');
        var hasUnservedItems = @(hasUnservedItems.ToString().ToLower());

        if (form) {
            form.addEventListener('submit', function(e) {
                if (hasUnservedItems) {
                    e.preventDefault(); 
                    var modal = new bootstrap.Modal(document.getElementById('unservedItemsModal'));
                    modal.show();
                } else {
                    setTimeout(function(){ window.location.reload(); }, 1000);
                }
            });
        }
    });
</script>