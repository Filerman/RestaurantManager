@model RestaurantManager.Models.Order
@{
    ViewData["Title"] = "Dziękujemy";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm p-5">
        <h1 class="text-success mb-4"><i class="bi bi-check-circle-fill"></i> Dziękujemy za zamówienie!</h1>
        <h3 class="mb-3">Numer zamówienia: <span class="text-primary">#@Model.Id</span></h3>

        <p class="lead">Twoje zamówienie zostało przyjęte do realizacji.</p>

        <div class="alert alert-light border d-inline-block px-4 py-2 mt-2">
            <i class="bi bi-clock"></i> Planowany czas realizacji:
            <strong>@Model.ScheduledDate.ToString("dd.MM.yyyy HH:mm")</strong>
        </div>

        <div class="mt-5">
            <a asp-controller="Menu" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-arrow-left"></i> Wróć do Menu
            </a>
            @* Opcjonalnie: link do historii zamówień, jeśli użytkownik jest zalogowany *@
            <a asp-controller="Orders" asp-action="History" class="btn btn-outline-secondary btn-lg ms-2">
                Moje Zamówienia
            </a>
        </div>
    </div>
</div>