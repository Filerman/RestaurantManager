@model IEnumerable<RestaurantManager.Models.DeliveryZone>
@{
    ViewData["Title"] = "Strefy Dostaw";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Zarządzanie Dostawami</h2>
            <p class="text-muted small mb-0">Konfiguracja stref i czasu oczekiwania</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
            <i class="bi bi-plus-lg me-2"></i>Dodaj Strefę
        </a>
    </div>

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info border-0 shadow-sm rounded-3 d-flex align-items-center mb-4">
            <i class="bi bi-info-circle-fill me-3 fs-4 text-info"></i>
            <div>@TempData["InfoMessage"]</div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 h-100 bg-white">
                <div class="card-header bg-warning bg-opacity-10 py-3 border-bottom-0">
                    <h5 class="fw-bold text-warning text-opacity-75 mb-0"><i class="bi bi-clock-history me-2"></i>Czas Oczekiwania</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="UpdateDeliveryTime" method="post">
                        <label class="form-label text-muted small fw-bold text-uppercase ls-1 mb-2">
                            Średni czas (minuty)
                        </label>
                        <div class="input-group mb-3">
                            <input type="number" name="minutes" value="@ViewBag.EstimatedDeliveryTime" class="form-control form-control-lg fw-bold text-center border-warning bg-light" min="15" step="5" />
                            <button type="submit" class="btn btn-warning fw-bold px-4">Zapisz</button>
                        </div>
                        <div class="d-flex align-items-start">
                            <i class="bi bi-info-circle text-muted me-2 mt-1"></i>
                            <span class="text-muted small lh-sm">Ten czas jest pokazywany klientom przy składaniu zamówienia "Jak najszybciej".</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden h-100">
                <div class="card-header bg-white py-3 border-bottom-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark mb-0">Obsługiwane Miejscowości</h5>
                    <span class="badge bg-light text-dark border">@Model.Count() stref</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light small text-uppercase text-muted">
                                <tr>
                                    <th class="ps-4 py-3 fw-bold">Miejscowość</th>
                                    <th class="fw-bold">Opłata</th>
                                    <th class="text-end pe-4 fw-bold">Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-5 text-muted">
                                            <i class="bi bi-geo-alt-fill fs-1 d-block mb-2 opacity-25"></i>
                                            Brak zdefiniowanych stref dostaw.
                                        </td>
                                    </tr>
                                }
                                @foreach (var item in Model)
                                {
                                    <tr class="border-bottom-0">
                                        <td class="ps-4">
                                            <span class="fw-bold text-dark">@item.CityName</span>
                                        </td>
                                        <td>
                                            @if (item.DeliveryFee == 0)
                                            {
                                                <span class="badge bg-success bg-opacity-10 text-success border border-success px-2 fw-normal">Darmowa</span>
                                            }
                                            else
                                            {
                                                <span class="fw-bold text-dark">@item.DeliveryFee.ToString("C")</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary border-0 rounded-2 me-1" title="Edytuj">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0 rounded-2" title="Usuń">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>