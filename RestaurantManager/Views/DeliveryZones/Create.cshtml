@model RestaurantManager.Models.DeliveryZone
@{
    ViewData["Title"] = "Dodaj Strefę";
}

<div class="container mt-4">
    <h2>Dodaj Strefę Dostaw</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div class="form-group mb-3">
                    <label asp-for="CityName" class="control-label"></label>
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DeliveryFee" class="control-label"></label>
                    <input asp-for="DeliveryFee" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="DeliveryFee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>