@model RestaurantManager.Models.DeliveryZone
@{
    ViewData["Title"] = "Dodaj Strefę";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h4 class="mb-0 fw-bold text-primary"><i class="bi bi-geo-alt-fill me-2"></i>Nowa Strefa Dostaw</h4>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-25">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="CityName" class="form-control rounded-3" placeholder="Miasto" />
                            <label asp-for="CityName">Nazwa Miejscowości</label>
                            <span asp-validation-for="CityName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="DeliveryFee" class="form-control rounded-3" type="number" step="0.01" min="0" placeholder="0.00" />
                            <label asp-for="DeliveryFee">Opłata za dowóz (PLN)</label>
                            <span asp-validation-for="DeliveryFee" class="text-danger small"></span>
                            <div class="form-text ms-1">Wpisz 0 dla darmowej dostawy.</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-light border px-4 fw-medium">Anuluj</a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">Dodaj strefę</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}