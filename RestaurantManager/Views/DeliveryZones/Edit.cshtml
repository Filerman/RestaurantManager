@model RestaurantManager.Models.DeliveryZone

@{
    ViewData["Title"] = "Edytuj Strefę";
}

<div class="container mt-4">
    <h2>Edycja Strefy Dostaw</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="CityName" class="control-label fw-bold"></label>
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DeliveryFee" class="control-label fw-bold"></label>
                    <input asp-for="DeliveryFee" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="DeliveryFee" class="text-danger"></span>
                </div>

                <div class="form-group gap-2 d-flex">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}