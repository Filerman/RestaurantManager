@model RestaurantManager.ViewModels.PayrollIndexViewModel

@{
    ViewData["Title"] = "Raport Wynagrodzeń";
    var months = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames;
}

<div class="container mt-4 mb-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Raport Płacowy</h2>
            <p class="text-muted small mb-0">Zestawienie godzin i wynagrodzeń pracowników</p>
        </div>
        <div class="mt-3 mt-md-0">
            <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill fs-6">
                <i class="bi bi-cash-stack me-2"></i>Suma: @Model.Payrolls.Sum(x => x.TotalSalary).ToString("C")
            </span>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 mb-4 bg-white">
        <div class="card-body p-3">
            <form asp-action="Payroll" method="get" class="row g-2 align-items-center justify-content-end">
                <div class="col-auto">
                    <label class="col-form-label fw-bold text-muted small text-uppercase me-2">Okres:</label>
                </div>
                <div class="col-auto">
                    <select name="month" class="form-select border-secondary border-opacity-25 bg-light fw-medium">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <!option value="@i" @(i == Model.Month ? "selected" : "")>@months[i - 1]</!option>
                        }
                    </select>
                </div>
                <div class="col-auto">
                    <input type="number" name="year" class="form-control border-secondary border-opacity-25 bg-light fw-medium" value="@Model.Year" min="2020" max="2030" style="width: 100px;" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary fw-bold shadow-sm px-4">Pokaż</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light small text-uppercase text-muted">
                        <tr>
                            <th class="ps-4 py-3 fw-bold">Pracownik</th>
                            <th class="text-center fw-bold">Zmiany</th>
                            <th class="text-center fw-bold">Godziny</th>
                            <th class="text-end pe-4 fw-bold">Do wypłaty</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Payrolls.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-calendar-x fs-1 d-block mb-2 opacity-25"></i>
                                    Brak danych płacowych dla wybranego okresu.
                                </td>
                            </tr>
                        }

                        @foreach (var item in Model.Payrolls)
                        {
                            <tr class="border-bottom-0">
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.EmployeeName</div>
                                    <div class="small text-muted">@item.EmployeeEmail</div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary bg-opacity-10 text-dark border px-3 py-1 rounded-pill">@item.ShiftsCount</span>
                                </td>
                                <td class="text-center fw-medium text-dark">
                                    @item.TotalHours.ToString("F1") h
                                </td>
                                <td class="text-end pe-4">
                                    <span class="fw-bold text-success fs-5">@item.TotalSalary.ToString("C")</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    @if (Model.Payrolls.Any())
                    {
                        <tfoot class="bg-light border-top">
                            <tr>
                                <td colspan="2" class="text-end fw-bold py-3 text-uppercase small text-muted pe-3">Razem:</td>
                                <td class="text-center fw-bold text-dark">@Model.Payrolls.Sum(x => x.TotalHours).ToString("F1") h</td>
                                <td class="text-end pe-4 fw-bold text-success fs-5">@Model.Payrolls.Sum(x => x.TotalSalary).ToString("C")</td>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>
</div>