@model RestaurantManager.Models.Employee

@{
    ViewData["Title"] = "Edytuj profil pracownika";
    var email = ViewData["EmployeeEmail"] as string;

    // Pobieramy dane przygotowane w kontrolerze
    var allTags = ViewData["AllTags"] as List<PositionTag> ?? new List<PositionTag>();
    var selectedTagIds = ViewData["SelectedTagIds"] as HashSet<int> ?? new HashSet<int>();
}

<h1>@ViewData["Title"]</h1>

<h4>Pracownik: @email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourlyRate" class="control-label"></label>
                <input asp-for="HourlyRate" class="form-control" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>

            <div class.form-group mt-3">
                <label class="control-label">Tagi / Stanowiska</label>
                <div class="list-group">
                    @foreach (var tag in allTags)
                    {
                        <label class="list-group-item">
                            <input type="checkbox"
                                   name="selectedTagIds"
                                   value="@tag.Id"
                                   @(selectedTagIds.Contains(tag.Id) ? "checked" : "") />
                            @tag.Name
                        </label>
                    }
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}