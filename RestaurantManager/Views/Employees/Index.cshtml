@model IEnumerable<RestaurantManager.Models.User>

@{
    ViewData["Title"] = "Pracownicy";
}

<h1>Pracownicy</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa użytkownika (Login)
            </th>
            <th>
                Imię i nazwisko (Profil)
            </th>
            <th>
                Tagi / Stanowiska
            </th>
            <th>
                Telefon
            </th>
            <th>
                Stawka godzinowa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.Username)
                </td>
                <td>
                    @if (user.Employee != null)
                    {
                        @Html.DisplayFor(modelItem => user.Employee.FullName)
                    }
                    else
                    {
                        <span class="text-danger">Profil nieuzupełniony</span>
                    }
                </td>
                <td>
                    @if (user.Employee != null && user.Employee.PositionTags.Any())
                    {
                        @string.Join(", ", user.Employee.PositionTags.Select(t => t.Name))
                    }
                    else
                    {
                        <span class="text-muted">---</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Employee.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Employee.HourlyRate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                        @(user.Employee == null ? "Uzupełnij profil" : "Edytuj")
                    </a> |
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>