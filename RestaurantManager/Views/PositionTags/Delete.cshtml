@model RestaurantManager.Models.PositionTag

@{
    ViewData["Title"] = "Usuń Stanowisko";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4 text-center">
                    <div class="mb-3 text-danger">
                        <i class="bi bi-exclamation-circle" style="font-size: 3rem;"></i>
                    </div>
                    <h4 class="card-title fw-bold mb-3">Usuwasz stanowisko</h4>
                    <p class="text-muted mb-4">Czy na pewno chcesz usunąć stanowisko <strong>"@Model.Name"</strong>?</p>

                    <div class="bg-light p-3 rounded-3 mb-4 text-start small border">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Aktualna stawka:</span>
                            <span class="fw-bold text-primary">@Model.HourlyRate.ToString("C")/h</span>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-light border px-4 rounded-pill fw-medium">Anuluj</a>
                        <button type="submit" class="btn btn-danger px-4 rounded-pill fw-bold shadow-sm">Tak, usuń</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>