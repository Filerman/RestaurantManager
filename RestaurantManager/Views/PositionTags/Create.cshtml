@model RestaurantManager.Models.PositionTag

@{
    ViewData["Title"] = "Dodaj Stanowisko";
}

<div class="container mt-4">
    <h2>Dodaj Nowe Stanowisko</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Np. Kelner, Kucharz" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HourlyRate" class="control-label fw-bold"></label>
                    <div class="input-group">
                        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0" />
                        <span class="input-group-text">PLN</span>
                    </div>
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    <small class="text-muted">Możesz wpisać kwotę z groszami, np. 25,50</small>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Utwórz" class="btn btn-success px-4" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}