@model IEnumerable<RestaurantManager.Models.PositionTag>

@{
    ViewData["Title"] = "Stanowiska i Stawki";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Stanowiska i Stawki</h2>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Dodaj Stanowisko</a>
    </div>

    <table class="table table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nazwa Stanowiska</th>
                <th>Stawka Godzinowa</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <span class="badge bg-primary fs-6">
                            @item.HourlyRate.ToString("C") / h
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegóły</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>