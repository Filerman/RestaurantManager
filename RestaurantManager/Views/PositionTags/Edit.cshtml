@model RestaurantManager.Models.PositionTag

@{
    ViewData["Title"] = "Edytuj Stanowisko";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h4 class="mb-0 fw-bold text-primary"><i class="bi bi-pencil-square me-2"></i>Edycja Stanowiska</h4>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-25">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control rounded-3" placeholder="Nazwa" />
                            <label asp-for="Name">Nazwa stanowiska</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="HourlyRate" class="form-label fw-bold small text-uppercase text-muted ls-1">Stawka godzinowa</label>
                            <div class="input-group">
                                <input asp-for="HourlyRate" class="form-control rounded-start-3" type="number" step="0.01" min="0"
                                       value="@Model.HourlyRate.ToString(System.Globalization.CultureInfo.InvariantCulture)" />
                                <span class="input-group-text bg-white border-start-0 rounded-end-3 text-muted">PLN</span>
                            </div>
                            <span asp-validation-for="HourlyRate" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end pt-2">
                            <a asp-action="Index" class="btn btn-light border rounded-pill px-4 fw-medium">Anuluj</a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 fw-bold shadow-sm">
                                <i class="bi bi-save me-1"></i> Zapisz
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}