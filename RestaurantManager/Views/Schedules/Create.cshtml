@model RestaurantManager.ViewModels.ScheduleCreateViewModel

@{
    ViewData["Title"] = "Utwórz Nowy Grafik";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0 text-center">
                    <h4 class="mb-0 fw-bold text-primary"><i class="bi bi-calendar-plus me-2"></i>Nowy Grafik</h4>
                    <p class="text-muted small mb-0 mt-1">Zdefiniuj okres obowiązywania</p>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-25">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="StartDate" class="form-control rounded-3" type="date" />
                            <label asp-for="StartDate">Data początkowa</label>
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="EndDate" class="form-control rounded-3" type="date" />
                            <label asp-for="EndDate">Data końcowa</label>
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-sm">
                                <i class="bi bi-arrow-right-circle me-2"></i>Utwórz i przejdź do edycji
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none small text-center mt-2">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}