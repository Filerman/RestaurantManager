@model RestaurantManager.Models.Schedule

@{
    ViewData["Title"] = "Usuń Grafik";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Czy na pewno chcesz usunąć ten grafik?</h3>
<p class="text-danger">Spowoduje to usunięcie wszystkich przypisanych do niego zmian.</p>
<div>
    <h4>Grafik</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Okres</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd") - @Model.EndDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.IsPublished ? "Opublikowany" : "Roboczy")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>