@model RestaurantManager.ViewModels.ProvideAvailabilityViewModel
@using System.Globalization
@{
    var polishCulture = new CultureInfo("pl-PL");
    var currentDate = new DateTime(Model.Year, Model.Month, 1);
    string monthName = currentDate.ToString("MMMM yyyy", polishCulture);
    ViewData["Title"] = "Edytor Dostępności";
}

<div class="container mt-4 mb-5">

    <form method="post" class="mb-4">
        @Html.AntiForgeryToken()
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center bg-white rounded-4 shadow-sm border p-3">
            <h2 class="mb-3 mb-md-0 fw-bold text-primary d-flex align-items-center">
                <i class="bi bi-calendar-range me-3"></i> @ViewData["Title"]
            </h2>

            <div class="d-flex align-items-center gap-3">
                <a asp-action="Index" class="btn btn-light border rounded-pill px-3 fw-medium">
                    <i class="bi bi-arrow-left me-1"></i> Wróć
                </a>

                <div class="btn-group rounded-pill shadow-sm" role="group">
                    <button type="submit" name="direction" value="prev"
                            class="btn btn-white border border-end-0 rounded-start-pill px-3 @(currentDate <= DateTime.Today.AddDays(-DateTime.Today.Day + 1) ? "disabled" : "")">
                        <i class="bi bi-chevron-left"></i>
                    </button>

                    <button type="button" class="btn btn-white border-top border-bottom px-4 fw-bold text-dark disabled" style="min-width: 160px; opacity: 1;">
                        @monthName.ToUpper()
                    </button>

                    <button type="submit" name="direction" value="next" class="btn btn-white border border-start-0 rounded-end-pill px-3">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </form>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <form method="post" asp-action="SubmitAvailability">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Year" />
            <input type="hidden" asp-for="Month" />

            <div class="card-body p-0">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success m-3 rounded-3 shadow-sm border-0">@TempData["SuccessMessage"]</div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger m-3 rounded-3 shadow-sm border-0">@TempData["ErrorMessage"]</div>
                }
                <div asp-validation-summary="All" class="text-danger m-3 small"></div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-uppercase small text-muted">
                            <tr>
                                <th style="width: 20%;" class="ps-4 py-3 fw-bold">Dzień</th>
                                <th style="width: 10%;" class="text-center fw-bold">Dostępny?</th>
                                <th style="width: 35%;" class="fw-bold">Godzina Od</th>
                                <th style="width: 35%;" class="fw-bold">Godzina Do</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Days.Count; i++)
                            {
                                var day = Model.Days[i];
                                bool isPast = day.Date < DateTime.Today;
                                var rowClass = isPast ? "bg-light text-muted" : "";
                                bool isWeekend = day.Date.DayOfWeek == DayOfWeek.Saturday || day.Date.DayOfWeek == DayOfWeek.Sunday;

                                <input type="hidden" asp-for="Days[i].Date" />
                                <input type="hidden" asp-for="Days[i].IsInCurrentMonth" />
                                @if (day.Availability != null)
                                {
                                    <input type="hidden" asp-for="Days[i].Availability!.Id" />
                                    <input type="hidden" asp-for="Days[i].Availability!.UserId" />
                                    <input type="hidden" asp-for="Days[i].Availability!.Date" />
                                }

                                <tr class="@rowClass border-bottom-0">
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="fw-bold fs-5 me-2" style="width: 30px; text-align: center;">@day.Date.Day</div>
                                            <div>
                                                <div class="small fw-bold @(isWeekend ? "text-danger" : "text-muted")">
                                                    @day.Date.ToString("dddd", polishCulture)
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="form-check d-flex justify-content-center">
                                            <input type="checkbox" asp-for="Days[i].IsSelected" class="form-check-input shadow-none border-secondary" disabled="@isPast" style="cursor: pointer; transform: scale(1.2);" />
                                        </div>
                                    </td>
                                    <td class="px-3">
                                        @if (day.Availability != null)
                                        {
                                            <input type="time" asp-for="Days[i].Availability!.StartTime" class="form-control form-control-sm bg-light border-0" disabled="@isPast" />
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>
                                    <td class="px-3">
                                        @if (day.Availability != null)
                                        {
                                            <input type="time" asp-for="Days[i].Availability!.EndTime" class="form-control form-control-sm bg-light border-0" disabled="@isPast" />
                                        }
                                        else
                                        {
                                            <span class="text-muted small">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer bg-white border-top p-3 sticky-bottom shadow-lg">
                <div class="d-flex justify-content-end align-items-center">
                    <a asp-action="Index" class="btn btn-light border rounded-pill fw-medium me-3 px-4">Anuluj</a>
                    <button type="submit" class="btn btn-primary rounded-pill fw-bold px-5 shadow-sm">
                        <i class="bi bi-save me-2"></i> Zapisz zmiany
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>