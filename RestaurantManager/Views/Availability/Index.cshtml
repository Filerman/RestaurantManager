@model RestaurantManager.ViewModels.AvailabilityViewModel

@{
    bool isViewingOthers = ViewBag.IsViewingOthers ?? false;
    ViewData["Title"] = ViewBag.TitleHeader ?? "Moja Dostępność";
    int deadlineDays = ViewBag.DeadlineDays ?? 7;
}

<div class="container mt-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 p-3 bg-white rounded shadow-sm">
        <h2 class="mb-2 mb-md-0 text-primary fw-bold">
            <i class="bi bi-calendar-check me-2"></i> @ViewData["Title"]
        </h2>

        <div class="btn-group" role="group">
            @if (isViewingOthers)
            {
                <a asp-action="Manage" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Powrót do listy
                </a>
            }
            else
            {
                <a asp-controller="Schedules" asp-action="MySchedule" class="btn btn-outline-primary">
                    <i class="bi bi-calendar3"></i> Zobacz mój grafik
                </a>
            }
        </div>
    </div>

    @if (!isViewingOthers)
    {
        <div class="alert alert-info border-start border-info border-4 shadow-sm mb-4">
            <i class="bi bi-info-circle-fill me-2"></i>
            Dyspozycyjność należy uzupełnić najpóźniej <strong>@deadlineDays dni</strong> przed rozpoczęciem miesiąca.
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @* FORMULARZ DODAWANIA (LEWA KOLUMNA) *@
        @if (!isViewingOthers)
        {
            <div class="col-lg-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary fw-bold mb-3"><i class="bi bi-plus-lg"></i> Zgłoś pojedynczy termin</h5>
                        <form asp-action="Add" method="post">
                            <input type="hidden" asp-for="NewAvailability.UserId" />

                            <div class="mb-3">
                                <label asp-for="NewAvailability.Date" class="form-label fw-bold text-secondary">Data</label>
                                <input asp-for="NewAvailability.Date" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="NewAvailability.Date" class="text-danger small"></span>
                            </div>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <label asp-for="NewAvailability.StartTime" class="form-label fw-bold text-secondary">Od</label>
                                    <input asp-for="NewAvailability.StartTime" class="form-control" type="time" />
                                </div>
                                <div class="col-6">
                                    <label asp-for="NewAvailability.EndTime" class="form-label fw-bold text-secondary">Do</label>
                                    <input asp-for="NewAvailability.EndTime" class="form-control" type="time" />
                                </div>
                            </div>
                            <span asp-validation-for="NewAvailability.StartTime" class="text-danger small d-block mb-2"></span>
                            <span asp-validation-for="NewAvailability.EndTime" class="text-danger small d-block mb-3"></span>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-lg"></i> Dodaj
                                </button>
                                <a asp-action="Provide" class="btn btn-outline-primary">
                                    <i class="bi bi-calendar-month"></i> Edytor miesięczny
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }

        @* LISTA TERMINÓW (PRAWA KOLUMNA) *@
        <div class="@(isViewingOthers ? "col-12" : "col-lg-8")">
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="p-3 border-bottom bg-light">
                        <h5 class="mb-0 text-primary fw-bold"><i class="bi bi-list-check"></i> Zgłoszone terminy (Nadchodzące)</h5>
                    </div>

                    @if (Model.Availabilities.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4">Data</th>
                                        <th>Godziny</th>
                                        @if (!isViewingOthers)
                                        {
                                            <th class="text-end pe-4">Akcje</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Availabilities)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="fw-bold">@item.Date.ToString("dd.MM.yyyy")</div>
                                                <small class="text-muted">@item.Date.ToString("dddd", new System.Globalization.CultureInfo("pl-PL"))</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark border">
                                                    @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                                                </span>
                                                <small class="text-muted ms-2">
                                                    (@((item.EndTime - item.StartTime).TotalHours.ToString("F1")) h)
                                                </small>
                                            </td>

                                            @if (!isViewingOthers)
                                            {
                                                <td class="text-end pe-4">
                                                    <div class="btn-group">
                                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Usunąć ten termin?');">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center text-muted">
                            <i class="bi bi-calendar-x fs-1 d-block mb-2 text-secondary opacity-50"></i>
                            @(isViewingOthers ? "Ten pracownik nie zgłosił jeszcze dyspozycyjności." : "Brak zgłoszeń.")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>