@model RestaurantManager.ViewModels.AvailabilityViewModel

@{
    bool isViewingOthers = ViewBag.IsViewingOthers ?? false;
    ViewData["Title"] = ViewBag.TitleHeader ?? "Moja Dostępność";
    int deadlineDays = ViewBag.DeadlineDays ?? 7;
}

<div class="container mt-4 mb-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 p-3 bg-white rounded-4 shadow-sm border">
        <h2 class="mb-2 mb-md-0 fw-bold text-dark d-flex align-items-center">
            <div class="icon-wrapper bg-primary-soft text-primary me-3 mb-0 fs-4 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; border-radius: 10px;">
                <i class="bi bi-calendar-check"></i>
            </div>
            @ViewData["Title"]
        </h2>

        <div class="btn-group shadow-sm rounded-pill" role="group">
            @if (isViewingOthers)
            {
                <a asp-action="Manage" class="btn btn-light border fw-medium px-3 rounded-pill">
                    <i class="bi bi-arrow-left me-2"></i> Powrót do listy
                </a>
            }
            else
            {
                <a asp-controller="Schedules" asp-action="MySchedule" class="btn btn-outline-primary fw-medium px-3 rounded-pill">
                    <i class="bi bi-calendar3 me-2"></i> Mój grafik
                </a>
            }
        </div>
    </div>

    @if (!isViewingOthers)
    {
        <div class="alert alert-info border-0 border-start border-4 border-info shadow-sm mb-4 rounded-3 bg-white">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle-fill text-info fs-4 me-3"></i>
                <div>
                    <strong class="d-block text-dark">Ważna informacja</strong>
                    <span class="text-muted small">Dyspozycyjność na kolejny miesiąc należy uzupełnić najpóźniej <strong>@deadlineDays dni</strong> przed jego rozpoczęciem.</span>
                </div>
            </div>
        </div>
    }

    @* USUNIĘTO BLOK TempData - jest obsługiwany w _Layout.cshtml *@

    <div class="row g-4">
        @if (!isViewingOthers)
        {
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 rounded-4 h-100 bg-white overflow-hidden">
                    <div class="card-header bg-white py-3 border-bottom-0">
                        <h5 class="card-title fw-bold text-dark mb-0">Dodaj termin</h5>
                    </div>
                    <div class="card-body p-4 pt-0">
                        <p class="text-muted small mb-3">Wybierz dzień i godziny, w których możesz pracować.</p>

                        <form asp-action="Add" method="post">
                            <input type="hidden" asp-for="NewAvailability.UserId" />

                            <div class="mb-3">
                                <label asp-for="NewAvailability.Date" class="form-label fw-bold small text-uppercase text-muted">Data</label>
                                <input asp-for="NewAvailability.Date" class="form-control bg-light border-0 rounded-3" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="NewAvailability.Date" class="text-danger small"></span>
                            </div>

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <label asp-for="NewAvailability.StartTime" class="form-label fw-bold small text-uppercase text-muted">Od</label>
                                    <input asp-for="NewAvailability.StartTime" class="form-control bg-light border-0 rounded-3" type="time" />
                                </div>
                                <div class="col-6">
                                    <label asp-for="NewAvailability.EndTime" class="form-label fw-bold small text-uppercase text-muted">Do</label>
                                    <input asp-for="NewAvailability.EndTime" class="form-control bg-light border-0 rounded-3" type="time" />
                                </div>
                            </div>
                            <span asp-validation-for="NewAvailability.StartTime" class="text-danger small d-block"></span>
                            <span asp-validation-for="NewAvailability.EndTime" class="text-danger small d-block mb-3"></span>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary fw-bold shadow-sm rounded-pill py-2">
                                    <i class="bi bi-plus-lg me-1"></i> Dodaj termin
                                </button>
                                <a asp-action="Provide" class="btn btn-outline-dark fw-medium rounded-pill py-2">
                                    <i class="bi bi-calendar-month me-1"></i> Edytor miesięczny
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }

        <div class="@(isViewingOthers ? "col-12" : "col-lg-8")">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden h-100">
                <div class="card-header bg-light py-3 border-bottom-0 d-flex justify-content-between align-items-center">
                    <h5 class="card-title fw-bold text-dark mb-0">Nadchodzące zgłoszenia</h5>
                    <span class="badge bg-white text-dark border rounded-pill px-3">@Model.Availabilities.Count pozycji</span>
                </div>

                <div class="card-body p-0">
                    @if (Model.Availabilities.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-white text-muted small text-uppercase">
                                    <tr>
                                        <th class="ps-4 py-3 fw-bold">Data</th>
                                        <th class="fw-bold">Godziny</th>
                                        @if (!isViewingOthers)
                                        {
                                            <th class="text-end pe-4 fw-bold">Akcje</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Availabilities)
                                    {
                                        <tr class="border-bottom-0">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-light rounded p-2 text-center me-3" style="min-width: 50px;">
                                                        <span class="d-block fw-bold fs-5 lh-1 text-dark">@item.Date.Day</span>
                                                        <span class="d-block small text-muted text-uppercase" style="font-size: 0.65rem;">@item.Date.ToString("MMM", new System.Globalization.CultureInfo("pl-PL"))</span>
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold text-dark">@item.Date.ToString("dd.MM.yyyy")</div>
                                                        <small class="text-muted">@item.Date.ToString("dddd", new System.Globalization.CultureInfo("pl-PL"))</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-success bg-opacity-10 text-success border border-success px-2 py-1 fw-normal rounded-pill">
                                                        <i class="bi bi-clock me-1"></i> @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                                                    </span>
                                                    <small class="text-muted ms-2">(@((item.EndTime - item.StartTime).TotalHours.ToString("F1"))h)</small>
                                                </div>
                                            </td>

                                            @if (!isViewingOthers)
                                            {
                                                <td class="text-end pe-4">
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary border rounded-2 me-1" title="Edytuj">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Usunąć ten termin?');">
                                                        <button type="submit" class="btn btn-sm btn-light text-danger border rounded-2" title="Usuń">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center h-100 d-flex flex-column justify-content-center align-items-center">
                            <div class="mb-3 text-muted opacity-25">
                                <i class="bi bi-calendar-x" style="font-size: 3rem;"></i>
                            </div>
                            <h6 class="fw-bold text-secondary">Brak zgłoszonych terminów</h6>
                            <p class="text-muted small">@(isViewingOthers ? "Pracownik nie dodał jeszcze dyspozycyjności." : "Użyj formularza obok, aby dodać swoje pierwsze zgłoszenie.")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-primary-soft {
        background-color: rgba(13, 110, 253, 0.1);
    }
</style>