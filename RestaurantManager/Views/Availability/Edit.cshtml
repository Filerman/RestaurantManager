@model RestaurantManager.Models.Availability
@{
    ViewData["Title"] = "Edytuj Dostępność";
}

<h2>@ViewData["Title"]</h2>
<h4>Dla daty: @Model.Date.ToString("yyyy-MM-dd")</h4>

@* Komunikat błędu z TempData lub walidacji *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="w-50">
    @Html.AntiForgeryToken() @* Token *@
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Date" /> @* Data jest przekazywana, ale nieedytowalna *@

    <div class="mb-3">
        <label asp-for="StartTime" class="form-label"></label> @* Nazwa z modelu *@
        <input asp-for="StartTime" type="time" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EndTime" class="form-label"></label> @* Nazwa z modelu *@
        <input asp-for="EndTime" type="time" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz Zmiany</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}