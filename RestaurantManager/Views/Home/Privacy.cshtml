@{
    ViewData["Title"] = "Polityka Prywatności i Informacje";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden mb-5">
                <div class="card-header bg-primary text-white py-4 text-center border-0">
                    <h2 class="fw-bold ls-1 mb-0" style="color: white;">Praca Inżynierska</h2>
                </div>

                <div class="card-body p-4 p-md-5 bg-white">

                    <div class="text-center mb-5">
                        <p class="lead text-muted">
                            System webowy do zarządzania restauracją z modułem sprzedaży, zamówień online oraz administracją kadr.
                        </p>
                    </div>

                    <div class="row g-4 mb-5">
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-4 h-100 border text-center">
                                <div class="icon-wrapper bg-white text-primary shadow-sm mx-auto mb-3" style="width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-person-fill fs-4"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Autor</h5>
                                <p class="text-muted mb-0 fs-5">Filip Siermantowski</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-4 bg-light rounded-4 h-100 border text-center">
                                <div class="icon-wrapper bg-white text-success shadow-sm mx-auto mb-3" style="width: 50px; height: 50px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-mortarboard-fill fs-4"></i>
                                </div>
                                <h5 class="fw-bold text-dark">Promotor</h5>
                                <p class="text-muted mb-0 fs-5">dr inż. Paweł Tadejko</p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4 opacity-10">

             
                </div>

                <div class="card-footer bg-light py-4 text-center border-0">
                    <div class="d-flex justify-content-center align-items-center opacity-75">
                        <i class="bi bi-building me-2 fs-5"></i>
                        <span class="fw-bold text-uppercase ls-1">Politechnika Białostocka</span>
                    </div>
                    <small class="text-muted d-block mt-1">Wydział Informatyki</small>
                </div>
            </div>

        </div>
    </div>
</div>