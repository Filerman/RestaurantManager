@model IEnumerable<RestaurantManager.Models.SupportTicket>
@{
    ViewData["Title"] = "HelpDesk";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Centrum Zgłoszeń</h2>

        @* --- FILTROWANIE --- *@
        <form method="get" asp-action="Manage" class="d-flex align-items-center">
            <label class="me-2 fw-bold">Pokaż:</label>
            <select name="filter" class="form-select me-2" onchange="this.form.submit()">
                <!option value="all" @(ViewBag.CurrentFilter == "all" ? "selected" : "")>Wszystkie</!option>
                <!option value="employees" @(ViewBag.CurrentFilter == "employees" ? "selected" : "")>Od Pracowników</!option>
                <!option value="clients" @(ViewBag.CurrentFilter == "clients" ? "selected" : "")>Od Klientów</!option>
            </select>
        </form>
    </div>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Data</th>
                <th>Kto</th>
                <th>Rola</th>
                <th>Temat</th>
                <th>Status</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DateCreated.ToString("dd.MM HH:mm")</td>
                    <td>
                        @item.CreatedByUser?.Username <br />
                        <small class="text-muted">@item.CreatedByUser?.Email</small>
                    </td>
                    <td>
                        @if (item.CreatedByUser?.Role == "Guest")
                        {
                            <span class="badge bg-info text-dark">Klient</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pracownik</span>
                        }
                    </td>
                    <td>@item.Subject</td>
                    <td>
                        <span class="badge @(item.Status == RestaurantManager.Models.TicketStatus.New ? "bg-primary" : (item.Status == RestaurantManager.Models.TicketStatus.Resolved ? "bg-success" : "bg-secondary"))">
                            @Html.DisplayFor(m => item.Status)
                        </span>
                    </td>
                    <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Szczegóły / Odpowiedz</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>