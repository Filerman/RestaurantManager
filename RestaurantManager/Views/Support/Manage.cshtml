@model IEnumerable<RestaurantManager.Models.SupportTicket>
@{
    ViewData["Title"] = "HelpDesk";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Centrum Zgłoszeń</h2>
            <p class="text-muted small mb-0">Zarządzaj pytaniami i zgłoszeniami</p>
        </div>

        <form method="get" asp-action="Manage" class="d-flex align-items-center bg-white p-1 rounded-pill shadow-sm border">
            <label class="px-3 fw-bold small text-muted text-uppercase mb-0">Filtr:</label>
            <select name="filter" class="form-select border-0 bg-transparent py-1 pe-5 ps-0 fw-bold text-dark shadow-none" onchange="this.form.submit()" style="cursor: pointer;">
                <!option value="all" @(ViewBag.CurrentFilter == "all" ? "selected" : "")>Wszystkie</!option>
                <!option value="employees" @(ViewBag.CurrentFilter == "employees" ? "selected" : "")>Od Pracowników</!option>
                <!option value="clients" @(ViewBag.CurrentFilter == "clients" ? "selected" : "")>Od Klientów</!option>
            </select>
        </form>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light small text-uppercase text-muted">
                        <tr>
                            <th class="ps-4 py-3 fw-bold">Data</th>
                            <th class="fw-bold">Zgłaszający</th>
                            <th class="fw-bold">Rola</th>
                            <th class="fw-bold">Temat</th>
                            <th class="fw-bold">Status</th>
                            <th class="text-end pe-4 fw-bold">Akcja</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="bi bi-check2-circle fs-1 d-block mb-2 opacity-25"></i>
                                    Wszystkie zgłoszenia rozwiązane!
                                </td>
                            </tr>
                        }

                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom-0">
                                <td class="ps-4 text-muted small">
                                    @item.DateCreated.ToString("dd.MM")<br />
                                    @item.DateCreated.ToString("HH:mm")
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@(item.CreatedByUser?.Username ?? "Nieznany")</div>
                                    <small class="text-muted">@(item.CreatedByUser?.Email ?? "-")</small>
                                </td>
                                <td>
                                    @if (item.CreatedByUser?.Role == "Guest")
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info border border-info rounded-pill px-2 fw-normal">Klient</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary rounded-pill px-2 fw-normal">Pracownik</span>
                                    }
                                </td>
                                <td class="fw-medium text-dark">@item.Subject</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case RestaurantManager.Models.TicketStatus.New:
                                            <span class="badge bg-primary rounded-pill px-3">Nowe</span>
                                            break;
                                        case RestaurantManager.Models.TicketStatus.Resolved:
                                            <span class="badge bg-success rounded-pill px-3">Rozwiązane</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary rounded-pill px-3">@item.Status</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3 fw-medium">
                                        Szczegóły
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>