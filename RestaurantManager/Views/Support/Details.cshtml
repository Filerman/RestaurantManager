@model RestaurantManager.Models.SupportTicket
@{
    ViewData["Title"] = "Szczegóły Zgłoszenia";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>@Model.Subject <small class="text-muted">(@Model.Status)</small></h3>
        <a asp-action="Manage" class="btn btn-outline-secondary">Powrót do listy</a>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <div class="d-flex justify-content-between">
                        <span>
                            <strong>Zgłosił:</strong> @(Model.CreatedByUser?.Username ?? "Nieznany")
                            <span class="text-muted small">(@Model.CreatedByUser?.Email)</span>
                        </span>
                        <span class="text-muted">@Model.DateCreated.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-secondary">Treść zgłoszenia:</h5>
                    <p class="card-text fs-5">@Model.Description</p>
                </div>
            </div>

            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Rozwiązanie / Odpowiedź</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ResolveTicket" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Treść odpowiedzi:</label>
                            <textarea name="managerResponse" class="form-control" rows="4" placeholder="Wpisz rozwiązanie lub komentarz dla zgłaszającego...">@Model.ManagerResponse</textarea>
                            <div class="form-text">Ta odpowiedź będzie widoczna dla zgłaszającego oraz (opcjonalnie) w FAQ.</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Status zgłoszenia:</label>
                                <select name="status" class="form-select" asp-items="Html.GetEnumSelectList<RestaurantManager.Models.TicketStatus>()" asp-for="Status"></select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="card bg-light border-0 p-3">
                                    <div class="form-check form-switch mb-2">
                                        <input class="form-check-input" type="checkbox" id="addToFaq" name="addToFaq" value="true" onchange="toggleFaqInput()">
                                        <label class="form-check-label fw-bold" for="addToFaq">Opublikuj w FAQ</label>
                                    </div>

                                    <div id="faqInputGroup" style="display:none;">
                                        <label class="form-label small text-muted">Edytuj treść pytania do FAQ:</label>
                                        <input type="text" name="faqQuestion" class="form-control form-control-sm" value="@Model.Subject" placeholder="Wpisz poprawione pytanie..." />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-end border-top pt-3">
                            <button type="submit" class="btn btn-success px-4"><i class="bi bi-check-lg"></i> Zapisz i Zaktualizuj</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleFaqInput() {
        var checkbox = document.getElementById('addToFaq');
        var inputGroup = document.getElementById('faqInputGroup');

        if (checkbox.checked) {
            inputGroup.style.display = 'block';
        } else {
            inputGroup.style.display = 'none';
        }
    }
</script>