@model RestaurantManager.Models.SupportTicket
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var role = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
    var title = (role == "Guest") ? "Zadaj Pytanie" : "Zgłoś Problem";
    ViewData["Title"] = title;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0 text-center">
                    <h4 class="mb-0 fw-bold text-primary">@title</h4>
                    <p class="text-muted small mb-0 mt-1">Opisz dokładnie sprawę, a postaramy się pomóc.</p>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-25">
                    <form asp-action="Create">
                        <div class="form-floating mb-3">
                            <input asp-for="Subject" class="form-control rounded-3" placeholder="Temat" />
                            <label asp-for="Subject">Temat (@(role == "Guest" ? "np. Rezerwacja grupowa" : "np. Awaria pieca"))</label>
                            <span asp-validation-for="Subject" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Description" class="form-control rounded-3" style="height: 150px" placeholder="Opis"></textarea>
                            <label asp-for="Description">Treść wiadomości</label>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-sm">
                                <i class="bi bi-send me-2"></i> Wyślij Zgłoszenie
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none small text-center">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>