@model RestaurantManager.Models.SupportTicket
@{
    ViewData["Title"] = "Zgłoś Problem";
}

<div class="container mt-4">
    <h2>Zgłoś Problem</h2>
    <form asp-action="Create">
        <div class="form-group mb-3">
            <label asp-for="Subject" class="fw-bold"></label>
            <input asp-for="Subject" class="form-control" placeholder="np. Awaria ekspresu" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description" class="fw-bold"></label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Wyślij</button>
    </form>
</div>