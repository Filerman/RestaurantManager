@model IEnumerable<RestaurantManager.Models.SupportTicket>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var role = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
    var title = (role == "Guest") ? "Moje Pytania" : "Moje Zgłoszenia";
    ViewData["Title"] = title;
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">@title</h2>
            <p class="text-muted small mb-0">Historia Twojej komunikacji z obsługą</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
            <i class="bi bi-plus-lg me-2"></i>@(role == "Guest" ? "Zadaj nowe pytanie" : "Nowe zgłoszenie")
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info border-0 shadow-sm rounded-4 py-4 text-center">
            <i class="bi bi-inbox fs-1 d-block mb-2 opacity-25"></i>
            Brak wpisów w historii.
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light small text-uppercase text-muted">
                            <tr>
                                <th class="ps-4 py-3 fw-bold" style="width: 15%;">Data</th>
                                <th class="fw-bold" style="width: 65%;">Temat / Odpowiedź</th>
                                <th class="fw-bold text-end pe-4" style="width: 20%;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="border-bottom-0">
                                    <td class="ps-4 text-muted small">@item.DateCreated.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <div class="fw-bold text-dark mb-1">@item.Subject</div>
                                        <small class="text-muted d-block mb-2">@item.Description</small>

                                        @if (!string.IsNullOrEmpty(item.ManagerResponse))
                                        {
                                            <div class="p-3 bg-light rounded-3 border-start border-4 border-primary small">
                                                <div class="fw-bold text-primary mb-1"><i class="bi bi-arrow-return-right me-1"></i>Odpowiedź:</div>
                                                <div class="text-dark">@item.ManagerResponse</div>
                                            </div>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        @switch (item.Status)
                                        {
                                            case RestaurantManager.Models.TicketStatus.New:
                                                <span class="badge bg-primary bg-opacity-10 text-primary border border-primary rounded-pill px-3 fw-normal">Nowe</span>
                                                break;
                                            case RestaurantManager.Models.TicketStatus.Resolved:
                                                <span class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-3 fw-normal">Rozwiązane</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary rounded-pill px-3 fw-normal">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>