@model IEnumerable<RestaurantManager.Models.User>

@{
    ViewData["Title"] = "Zarządzanie Użytkownikami";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="bi bi-people-fill"></i> @ViewData["Title"]</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Username)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Role)</th>
                            <th class="text-end pe-4">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.Username)</td>
                                <td>
                                    <a href="mailto:@item.Email" class="text-decoration-none">
                                        <i class="bi bi-envelope"></i> @Html.DisplayFor(modelItem => item.Email)
                                    </a>
                                </td>
                                <td>
                                    @if (item.Role == "Admin")
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else if (item.Role == "Manager")
                                    {

                                        <span class="badge bg-warning text-dark">Manager</span>
                                    }
                                    else if (item.Role == "Employee")
                                    {

                                        <span class="badge bg-success">Pracownik</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">Gość</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edytuj">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Szczegóły">
                                            <i class="bi bi-info-circle"></i>
                                        </a>

                                        @* NOWY PRZYCISK: RESET HASŁA *@
                                        @if (Context.Session.GetString("UserRole") == "Admin")
                                        {
                                            <a asp-action="AdminResetPassword" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark" title="Resetuj hasło">
                                                <i class="bi bi-key-fill"></i>
                                            </a>
                                        }

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Usuń">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>