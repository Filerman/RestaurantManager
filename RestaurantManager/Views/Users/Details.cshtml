@model RestaurantManager.Models.User

@{
    ViewData["Title"] = "Szczegóły Użytkownika";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark mb-0">Profil Użytkownika</h5>
                    @if (Model.Role == "Admin")
                    {
                        <span class="badge bg-danger rounded-pill">Admin</span>
                    }
                    else if (Model.Role == "Manager")
                    {

                        <span class="badge bg-warning text-dark rounded-pill">Manager</span>
                    }
                    else
                    {

                        <span class="badge bg-secondary rounded-pill">@Model.Role</span>
                    }
                </div>

                <div class="card-body p-4 bg-light bg-opacity-25 text-center">
                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                        {
                            <img src="@Model.ProfilePicturePath" class="rounded-circle shadow border border-3 border-white" style="width: 100px; height: 100px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-white d-flex align-items-center justify-content-center text-secondary border shadow mx-auto fs-1 fw-bold" style="width: 100px; height: 100px;">
                                @Model.Username.Substring(0, 1).ToUpper()
                            </div>
                        }
                    </div>

                    <h3 class="fw-bold text-dark mb-1">@Model.Username</h3>
                    <p class="text-muted mb-4">@Model.Email</p>

                    <div class="bg-white p-3 rounded-3 shadow-sm text-start mb-4 border small">
                        <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <span class="text-muted">ID:</span>
                            <span class="fw-medium">@Model.Id</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 pb-2 border-bottom">
                            <span class="text-muted">Telefon:</span>
                            <span class="fw-bold text-dark">
                                @(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : (Model.Employee?.Phone ?? "-"))
                            </span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Ścieżka zdjęcia:</span>
                            <span class="fw-medium text-break text-end" style="max-width: 60%;">@(Model.ProfilePicturePath ?? "-")</span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill fw-bold shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i>Edytuj
                        </a>
                        <a asp-action="Index" class="btn btn-light border rounded-pill fw-medium">
                            Wróć do listy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>