@model IEnumerable<RestaurantManager.Models.User>

@{
    ViewData["Title"] = "Katalog Kontaktów";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-lines-fill text-primary"></i> Katalog Kontaktów</h2>

        <form asp-action="Directory" method="get" class="d-flex">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Szukaj..." />
            <button type="submit" class="btn btn-outline-primary">Szukaj</button>
            <a asp-action="Directory" class="btn btn-outline-secondary ms-1">Reset</a>
        </form>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-body d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            @if (!string.IsNullOrEmpty(item.ProfilePicturePath))
                            {
                                <img src="@item.ProfilePicturePath" alt="Avatar" class="rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="/images/profiles/default.png" alt="Avatar" class="rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">
                            }
                        </div>
                        <div class="flex-grow-1 overflow-hidden">
                            <h5 class="card-title mb-1 text-truncate">
                                @if (item.Employee != null)
                                {
                                    @item.Employee.FullName
                                }
                                else
                                {
                                    @item.Username
                                }
                            </h5>

                            @* Odznaka Roli *@
                            <div class="mb-2">
                                @if (item.Role == "Admin")
                                {
                                    <span class="badge bg-danger">Administrator</span>
                                }
                                else if (item.Role == "Manager")
                                {
                                    <span class="badge bg-warning text-dark">Manager</span>
                                }
                                else if (item.Role == "Employee")
                                {
                                    <span class="badge bg-success">Pracownik</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Gość / Klient</span>
                                }
                            </div>

                            <div class="small text-muted text-truncate mb-1">
                                <i class="bi bi-envelope"></i> <a href="mailto:@item.Email" class="text-decoration-none text-muted">@item.Email</a>
                            </div>

                            @* LOGIKA TELEFONU *@
                            @if (item.Employee != null)
                            {
                                <div class="small text-muted">
                                    <i class="bi bi-telephone-fill text-success"></i> <a href="tel:@item.Employee.Phone" class="text-decoration-none text-muted">@item.Employee.Phone (Sł.)</a>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(item.PhoneNumber))
                            {
                                <div class="small text-muted">
                                    <i class="bi bi-telephone"></i> <a href="tel:@item.PhoneNumber" class="text-decoration-none text-muted">@item.PhoneNumber</a>
                                </div>
                            }
                            else if (item.Employee == null)
                            {
                                <div class="small text-muted fst-italic">Brak nr telefonu</div>
                            }

                        </div>
                    </div>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <div class="card-footer bg-transparent border-0 text-end">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary">Szczegóły</a>
                        </div>
                    }
                </div>
            </div> @* Poprawne zamknięcie kolumny *@
        }
    </div>
</div>