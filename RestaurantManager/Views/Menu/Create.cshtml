@model RestaurantManager.Models.MenuItem
@{
    ViewData["Title"] = "Dodaj Nowe Danie";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Dodaj nową pozycję</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Wpisz nazwę dania" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label fw-bold"></label>

                            <input asp-for="Category" class="form-control" placeholder="Wybierz lub wpisz nową..." list="categoryList" autocomplete="off" />

                            <datalist id="categoryList">
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var cat in (System.Collections.Generic.List<string>)ViewBag.Categories)
                                    {
                                        <option value="@cat" />
                                    }
                                }
                            </datalist>

                            <div class="form-text text-muted small">
                                <i class="bi bi-info-circle"></i> Aby utworzyć <strong>nową kategorię</strong>, po prostu wpisz jej nazwę. Aby przypisać do istniejącej, wybierz ją z listy.
                            </div>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                <span class="input-group-text">PLN</span>
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Opis składników, alergeny itp."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Zdjęcie</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="mb-3 form-check bg-light p-2 rounded border">
                            <input asp-for="IsAvailable" class="form-check-input ms-0 me-2" style="margin-top: 0.3rem;" />
                            <label class="form-check-label fw-bold" asp-for="IsAvailable">Produkt jest dostępny w sprzedaży</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-check-circle"></i> Zapisz</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Powrót do listy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>