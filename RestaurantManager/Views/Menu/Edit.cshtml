@model RestaurantManager.Models.MenuItem
@{
    ViewData["Title"] = "Edytuj Danie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h4 class="mb-0 fw-bold text-primary"><i class="bi bi-pencil-square me-2"></i>Edycja pozycji</h4>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-25">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImagePath" />

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold small text-uppercase text-muted ls-1">Nazwa dania</label>
                            <input asp-for="Name" class="form-control rounded-3" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Category" class="form-label fw-bold small text-uppercase text-muted ls-1">Kategoria</label>
                            <input asp-for="Category" class="form-control rounded-3" list="categoryList" />
                            <datalist id="categoryList">
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var cat in (List<string>)ViewBag.Categories)
                                    {
                                        <option value="@cat" />
                                    }
                                }
                            </datalist>
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label fw-bold small text-uppercase text-muted ls-1">Cena</label>
                            <div class="input-group">
                                <input asp-for="Price" class="form-control rounded-start-3" type="number" step="0.01" />
                                <span class="input-group-text bg-white border-start-0 rounded-end-3">PLN</span>
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-bold small text-uppercase text-muted ls-1">Opis</label>
                            <textarea asp-for="Description" class="form-control rounded-3" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted ls-1">Zmień zdjęcie</label>
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <div class="mb-2 p-2 bg-white rounded border d-inline-block">
                                    <img src="@Model.ImagePath" style="height: 60px; border-radius: 4px;" />
                                    <span class="ms-2 text-muted small">Aktualne</span>
                                </div>
                            }
                            <input type="file" name="imageFile" class="form-control rounded-3" accept="image/*" />
                            <div class="form-text text-muted small"><i class="bi bi-info-circle me-1"></i>Zalecany format zdjęcia to <strong>4:3</strong> (np. 800x600px).</div>
                        </div>

                        <div class="form-check form-switch mb-4 p-3 bg-white rounded-3 border shadow-sm">
                            <input asp-for="IsAvailable" class="form-check-input ms-0 me-3" style="margin-top: 0.15rem; transform: scale(1.2);" />
                            <label class="form-check-label fw-bold text-dark" asp-for="IsAvailable">Produkt dostępny w sprzedaży</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-light border rounded-pill px-4 fw-medium">Anuluj</a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 fw-bold shadow-sm">
                                <i class="bi bi-save me-1"></i> Zapisz
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}