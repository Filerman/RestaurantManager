@using Microsoft.AspNetCore.Http
@using Microsoft.EntityFrameworkCore
@using RestaurantManager.Extensions
@using RestaurantManager.ViewModels
@using RestaurantManager.Models

@inject RestaurantManager.Data.AppDbContext _context

@{
    var userId = Context.Session.GetInt32("UserId");
    var logged = userId.HasValue;
    var usernameInSession = Context.Session.GetString("Username");
    var role = Context.Session.GetString("UserRole");
    var picturePath = Context.Session.GetString("ProfilePicturePath");
    if (string.IsNullOrEmpty(picturePath)) { picturePath = "/images/profiles/default.png"; }

    bool isEmployee = (role == "Employee" || role == "Manager" || role == "Admin");
    bool isManager = (role == "Manager" || role == "Admin");

    // Branding
    var brandingInfo = _context.ContactInfos.AsNoTracking().FirstOrDefault();
    string restaurantName = brandingInfo?.RestaurantName ?? "Bistro Manager";
    string? logoUrl = brandingInfo?.LogoPath;

    // Logika wyświetlania logo:
    bool showLogo = (brandingInfo?.ShowLogoInHeader ?? false) && !string.IsNullOrEmpty(logoUrl);

    // Koszyk
    var cart = Context.Session.GetObject<List<CartItemViewModel>>("Cart");
    int cartCount = cart?.Sum(x => x.Quantity) ?? 0;

    // HelpDesk (Manager)
    int openTicketsCount = 0;
    if (isManager)
    {
        openTicketsCount = _context.SupportTickets.Count(t => t.Status == TicketStatus.New || t.Status == TicketStatus.InProgress);
    }

    // --- KROPKA POWIADOMIENIA ---
    bool hasTicketResponse = false;
    if (logged)
    {
        hasTicketResponse = _context.SupportTickets.Any(t => t.CreatedByUserId == userId.Value && t.HasUnreadResponse);
    }
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @restaurantName</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/locale/pl.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow-sm py-2">
            <div class="container-fluid px-4">

                <a class="navbar-brand d-flex align-items-center fw-bold text-dark" asp-controller="Home" asp-action="Index">
                    @if (showLogo)
                    {
                        <img src="@logoUrl" alt="@restaurantName" style="height: 40px; width: auto;" />
                    }
                    else
                    {
                        <span class="tracking-tight">@restaurantName</span>
                    }
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-lg-center">
                        <li class="nav-item"><a class="nav-link px-3 fw-medium" asp-controller="Menu" asp-action="Index">Menu</a></li>
                        <li class="nav-item"><a class="nav-link px-3 fw-medium" asp-controller="Announcements" asp-action="Index">Aktualności</a></li>
                        <li class="nav-item"><a class="nav-link px-3 fw-medium" asp-controller="Gallery" asp-action="Index">Galeria</a></li>
                        <li class="nav-item"><a class="nav-link px-3 fw-medium" asp-controller="Faq" asp-action="Index">FAQ</a></li>
                        <li class="nav-item"><a class="nav-link px-3 fw-medium" asp-controller="ContactInfo" asp-action="Index">Kontakt</a></li>

                        @if (logged)
                        {
                            <li class="nav-item ms-lg-2 border-start ps-lg-3"><a class="nav-link px-3 fw-medium text-primary" asp-controller="Reservations" asp-action="Index">Rezerwacje</a></li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center gap-2">
                        <li class="nav-item">
                            <a class="btn btn-outline-dark border-0 position-relative rounded-pill px-3" asp-controller="Cart" asp-action="Index" title="Twój koszyk">
                                <i class="bi bi-bag fs-5"></i>
                                @if (cartCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning text-dark border border-white">@cartCount</span>
                                }
                            </a>
                        </li>

                        @if (isEmployee)
                        {
                            <li class="nav-item">
                                <a class="btn btn-success fw-bold rounded-pill px-3 shadow-sm d-flex align-items-center" asp-controller="Orders" asp-action="Index">
                                    <i class="bi bi-calculator-fill me-2"></i> POS
                                </a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="btn btn-light text-primary fw-medium dropdown-toggle rounded-pill px-3 border" href="#" id="employeeDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-workspace me-1"></i> Panel
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow rounded-3 p-2" style="min-width: 220px;">
                                    <li><h6 class="dropdown-header text-uppercase smaller fw-bold ls-1 text-primary">Twoja Praca</h6></li>
                                    <li><a class="dropdown-item rounded-2 py-2" asp-controller="Schedules" asp-action="MySchedule"><i class="bi bi-calendar-check me-2"></i>Mój Grafik</a></li>
                                    <li><a class="dropdown-item rounded-2 py-2" asp-controller="Availability" asp-action="Index"><i class="bi bi-clock-history me-2"></i>Dyspozycyjność</a></li>
                                    <li><a class="dropdown-item rounded-2 py-2" asp-controller="LossLogs" asp-action="Report"><i class="bi bi-trash3 me-2"></i>Zgłoś Stratę</a></li>
                                    <li><a class="dropdown-item rounded-2 py-2" asp-controller="Support" asp-action="MyTickets"><i class="bi bi-question-circle me-2"></i>Help Desk</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item rounded-2 py-2" asp-controller="Users" asp-action="Directory"><i class="bi bi-people me-2"></i>Kontakty</a></li>
                                </ul>
                            </li>
                        }

                        @if (isManager)
                        {
                            <li class="nav-item dropdown">
                                <a class="btn btn-light text-dark fw-medium dropdown-toggle rounded-pill px-3 border" href="#" id="managerDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-shield-lock me-1"></i> Zarządzanie
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow rounded-3 p-2" style="min-width: 260px; max-height: 80vh; overflow-y: auto;">
                                    <li><h6 class="dropdown-header text-uppercase smaller fw-bold ls-1 text-primary bg-light rounded px-2 py-1 mb-1">Restauracja</h6></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Menu" asp-action="Index">Menu & Produkty</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Tables" asp-action="Index">Stoliki</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="DeliveryZones" asp-action="Index">Dostawy</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="OpeningHours" asp-action="Index">Godziny Otwarcia</a></li>
                                    <li><a class="dropdown-item rounded-2 text-danger" asp-controller="LossLogs" asp-action="Index"><i class="bi bi-trash me-2"></i>Rejestr Strat</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-uppercase smaller fw-bold ls-1 text-primary bg-light rounded px-2 py-1 mb-1">Treść & Marketing</h6></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Content" asp-action="ManageHome">Edycja Strony Głównej</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Announcements" asp-action="Manage">Aktualności</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Gallery" asp-action="Manage">Galeria Zdjęć</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Faq" asp-action="Manage">Sekcja FAQ</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="ContactInfo" asp-action="Edit">Dane Firmy & Logo</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-uppercase smaller fw-bold ls-1 text-primary bg-light rounded px-2 py-1 mb-1">HR & Personel</h6></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Employees" asp-action="Index">Lista Pracowników</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Schedules" asp-action="Index">Grafiki Pracy</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Availability" asp-action="Manage">Dyspozycyjność</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="PositionTags" asp-action="Index">Tagi Stanowisk</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Employees" asp-action="Payroll">Lista Płac</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Users" asp-action="Index">Użytkownicy Systemu</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item rounded-2 d-flex justify-content-between align-items-center fw-bold" asp-controller="Support" asp-action="Manage">
                                            <span><i class="bi bi-life-preserver me-2"></i>Zgłoszenia</span>
                                            @if (openTicketsCount > 0)
                                            {
                                                <span class="badge bg-danger rounded-pill">@openTicketsCount</span>
                                            }
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        @if (!logged)
                        {
                            <li class="nav-item"><a class="btn btn-primary rounded-pill px-4 shadow-sm ms-2" asp-controller="Auth" asp-action="Login">Zaloguj</a></li>
                            <li class="nav-item"><a class="btn btn-outline-primary rounded-pill px-4 ms-2" asp-controller="Auth" asp-action="Register">Dołącz</a></li>
                        }
                        else
                        {
                            <li class="nav-item dropdown ms-2">
                                <a class="nav-link p-0 d-flex align-items-center gap-2" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown">
                                    <div class="position-relative">
                                        <img src="@picturePath" alt="Avatar" class="rounded-circle shadow-sm" style="width: 40px; height: 40px; object-fit: cover; border: 2px solid #fff;">
                                        @if (hasTicketResponse)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                                        }
                                    </div>
                                    <div class="d-none d-lg-flex flex-column align-items-start lh-1">
                                        <span class="fw-bold text-dark" style="font-size: 0.9rem;">@usernameInSession</span>
                                        <span class="text-muted" style="font-size: 0.7rem;">@role</span>
                                    </div>
                                    <i class="bi bi-chevron-down small text-muted"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow rounded-3 p-2" style="min-width: 200px;">
                                    <li class="d-lg-none px-3 py-2 border-bottom mb-2">
                                        <div class="fw-bold text-dark">@usernameInSession</div>
                                        <small class="text-muted">@role</small>
                                    </li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Auth" asp-action="Profile"><i class="bi bi-person me-2"></i>Mój Profil</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Orders" asp-action="History"><i class="bi bi-clock-history me-2"></i>Historia Zamówień</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Support" asp-action="MyTickets"><i class="bi bi-chat-dots me-2"></i>Moje Zgłoszenia</a></li>
                                    <li><a class="dropdown-item rounded-2" asp-controller="Auth" asp-action="EditProfile"><i class="bi bi-gear me-2"></i>Ustawienia</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item rounded-2 text-danger fw-medium" asp-controller="Auth" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Wyloguj</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content" style="padding-top: 100px;">
        <div class="container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 rounded-3 d-flex align-items-center" role="alert">
                    <i class="bi bi-check-circle-fill fs-4 me-3 text-success"></i>
                    <div>@TempData["SuccessMessage"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 rounded-3 d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-octagon-fill fs-4 me-3 text-danger"></i>
                    <div>@TempData["ErrorMessage"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["InfoMessage"] != null)
            {
                <div class="alert alert-primary alert-dismissible fade show shadow-sm border-0 rounded-3 d-flex align-items-center bg-primary-soft text-primary" role="alert">
                    <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                    <div>@TempData["InfoMessage"]</div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <main role="main" class="pb-5 fade-in">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-white border-top py-4 mt-auto">
        <div class="container text-center">
            <div class="d-flex justify-content-center align-items-center mb-3 text-muted">
                <i class="bi bi-egg-fried fs-4 me-2"></i>
                <span class="fw-bold tracking-tight">@restaurantName</span>
            </div>
            <p class="text-muted small mb-0">&copy; @DateTime.Now.Year - Wszelkie prawa zastrzeżone. | <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted fw-medium">Polityka Prywatności</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>