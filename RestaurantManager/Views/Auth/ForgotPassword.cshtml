@{
    ViewData["Title"] = "Odzyskiwanie Hasła";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0"><i class="bi bi-shield-lock"></i> Odzyskiwanie dostępu</h4>
                </div>
                <div class="card-body bg-light">
                    <p class="text-muted text-center small">Podaj login oraz swój PIN ratunkowy ustawiony podczas rejestracji.</p>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form method="post">
                        <div class="form-floating mb-3">
                            <input type="text" name="login" class="form-control" placeholder="Login" required />
                            <label>Login lub Email</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" name="recoveryPin" class="form-control" placeholder="PIN" required />
                            <label>PIN Ratunkowy</label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning shadow-sm">Weryfikuj</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="Login" class="text-decoration-none text-muted">Powrót do logowania</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>