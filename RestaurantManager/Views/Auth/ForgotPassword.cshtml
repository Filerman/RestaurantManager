@{
    ViewData["Title"] = "Odzyskiwanie Hasła";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-warning text-dark text-center py-4 border-0">
                    <div class="mb-2"><i class="bi bi-shield-lock-fill display-4"></i></div>
                    <h4 class="mb-0 fw-bold">Odzyskiwanie konta</h4>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-25">
                    <p class="text-center text-muted small mb-4">
                        Wprowadź swój login oraz <strong>PIN ratunkowy</strong> podany przy rejestracji.
                    </p>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger border-0 shadow-sm rounded-3 d-flex align-items-center mb-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>@TempData["Error"]</div>
                        </div>
                    }

                    <form method="post">
                        <div class="form-floating mb-3">
                            <input type="text" name="login" class="form-control rounded-3" id="floatingInput" placeholder="Login" required />
                            <label for="floatingInput">Login lub Email</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" name="recoveryPin" class="form-control rounded-3" id="floatingPin" placeholder="PIN" required />
                            <label for="floatingPin">PIN Ratunkowy</label>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold shadow-sm">Weryfikuj</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-white text-center py-3 border-0">
                    <a asp-action="Login" class="text-decoration-none fw-medium small text-muted hover-underline">
                        <i class="bi bi-arrow-left me-1"></i>Powrót do logowania
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>