@{
    ViewData["Title"] = "Logowanie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary bg-gradient text-white text-center py-4 rounded-top-3">
                    <h3 class="mb-0 fw-bold"><i class="bi bi-door-open-fill"></i> Logowanie</h3>
                </div>
                <div class="card-body p-4 bg-light">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
                            <i class="bi bi-exclamation-circle-fill me-2"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show shadow-sm">
                            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post">
                        <div class="form-floating mb-3">
                            <input type="text" name="login" class="form-control" id="floatingInput" placeholder="Login lub Email" required />
                            <label for="floatingInput">Login lub Email</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Hasło" required />
                            <label for="floatingPassword">Hasło</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg bg-gradient shadow-sm">
                                <i class="bi bi-box-arrow-in-right"></i> Zaloguj się
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Register" class="text-decoration-none">Nie masz konta? Zarejestruj się</a>
                    </div>
                </div>

                <div class="card-footer bg-white text-center py-3 border-top-0">
                    <a asp-action="ForgotPassword" class="btn btn-link text-decoration-none p-0">
                        <i class="bi bi-question-circle"></i> Zapomniałem hasła / Resetuj PIN-em
                    </a>
                    <div class="mt-2 small text-muted">
                        Jeśli zapomniałeś PIN-u, skontaktuj się z Managerem.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>