@model RestaurantManager.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Mój Profil";
    // Sprawdzamy czy są dane pracownicze (czyli czy user jest powiązany z tabelą Employees)
    bool hasEmployeeData = Model.FullName != null;
}

<div class="container mt-5">
    <div class="card shadow border-0 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-4 bg-light text-center py-5 d-flex flex-column align-items-center justify-content-center border-end">
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                    {
                        <img src="@Model.ProfilePicturePath" alt="Avatar" class="rounded-circle shadow-sm border border-3 border-white" style="width: 160px; height: 160px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="/images/profiles/default.png" alt="Default Avatar" class="rounded-circle shadow-sm border border-3 border-white" style="width: 160px; height: 160px; object-fit: cover;">
                    }
                </div>
                <h3 class="fw-bold text-dark mb-1">@Model.Username</h3>
                <span class="badge bg-primary px-3 py-2 text-uppercase mb-3">@Model.Role</span>

                <a asp-action="EditProfile" class="btn btn-outline-dark btn-sm px-4 rounded-pill mt-2">
                    <i class="bi bi-gear-fill me-1"></i> Ustawienia konta
                </a>
            </div>

            <div class="col-md-8">
                <div class="card-body p-4 p-lg-5">
                    <h5 class="text-uppercase text-muted fw-bold mb-4 ls-1">Informacje podstawowe</h5>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-semibold">Adres Email:</div>
                        <div class="col-sm-8 text-dark">@Model.Email</div>
                    </div>

                    @* --- POPRAWKA 1: WYŚWIETLANIE TELEFONU UŻYTKOWNIKA --- *@
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-semibold">Telefon kontaktowy:</div>
                        <div class="col-sm-8 text-dark">
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                @Model.PhoneNumber
                            }
                            else
                            {
                                <span class="text-muted fst-italic small">Brak (dodaj w edycji profilu)</span>
                            }
                        </div>
                    </div>
                    @* ----------------------------------------------------- *@

                    <hr class="my-4" />

                    @if (hasEmployeeData)
                    {
                        @* --- WIDOK DLA PRACOWNIKA (Z danymi HR) --- *@
                        <h5 class="text-uppercase text-success fw-bold mb-4 ls-1">
                            <i class="bi bi-person-badge me-2"></i>Karta Pracownika
                        </h5>

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-semibold">Imię i nazwisko:</div>
                            <div class="col-sm-8">@Model.FullName</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-semibold">Telefon służbowy:</div>
                            <div class="col-sm-8">@Model.Phone</div>
                        </div>

                        @if (Model.HireDate.HasValue && Model.HireDate != DateTime.MinValue)
                        {
                            <div class="row mb-3">
                                <div class="col-sm-4 text-muted fw-semibold">Staż pracy:</div>
                                <div class="col-sm-8">
                                    <span class="fw-bold text-primary">@Model.SeniorityString</span>
                                    <div class="small text-muted mt-1">Zatrudniono: @Model.HireDate.Value.ToShortDateString()</div>
                                </div>
                            </div>
                        }

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-semibold pt-2">Stanowiska:</div>
                            <div class="col-sm-8">
                                @if (Model.PositionTags != null && Model.PositionTags.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var tag in Model.PositionTags)
                                        {
                                            <div class="badge bg-light text-dark border p-2 fw-normal">
                                                @tag.Name <span class="fw-bold ms-1 text-success">@tag.HourlyRate.ToString("F2") zł/h</span>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">Brak przypisanych stanowisk.</span>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        @* --- POPRAWKA 2: SENSOWNY WIDOK DLA MANAGERA/ADMINA --- *@
                        if (Model.Role == "Manager" || Model.Role == "Admin")
                        {
                            <div class="card bg-light border-0 mt-3">
                                <div class="card-body">
                                    <h6 class="text-primary fw-bold mb-3">
                                        <i class="bi bi-shield-check me-2"></i>Uprawnienia Administracyjne
                                    </h6>
                                    <p class="small text-muted mb-3">
                                        Twoje konto posiada pełne uprawnienia do zarządzania restauracją.
                                        Poniżej znajdziesz szybkie skróty do najczęściej używanych funkcji.
                                    </p>

                                    <div class="d-flex flex-wrap gap-2">
                                        <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary bg-white">
                                            <i class="bi bi-receipt"></i> Zamówienia
                                        </a>
                                        <a asp-controller="Employees" asp-action="Index" class="btn btn-sm btn-outline-primary bg-white">
                                            <i class="bi bi-people"></i> Pracownicy
                                        </a>
                                        <a asp-controller="Schedules" asp-action="Index" class="btn btn-sm btn-outline-primary bg-white">
                                            <i class="bi bi-calendar3"></i> Grafik
                                        </a>
                                        <a asp-controller="Users" asp-action="Directory" class="btn btn-sm btn-outline-secondary bg-white">
                                            <i class="bi bi-journal-bookmark"></i> Katalog Kontaktów
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-light mt-3">
                                <i class="bi bi-emoji-smile me-2"></i>Witaj! To jest konto gościa. <br />
                                <small class="text-muted">Historia Twoich zamówień znajduje się w menu głównym.</small>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>