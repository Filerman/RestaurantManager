@model RestaurantManager.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Mój Profil";
    bool hasEmployeeData = Model.FullName != null;
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-4 bg-light text-center py-5 d-flex flex-column align-items-center justify-content-center border-end">
                <div class="position-relative mb-3">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                    {
                        <img src="@Model.ProfilePicturePath" alt="Avatar" class="rounded-circle shadow border border-4 border-white" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="/images/profiles/default.png" alt="Avatar" class="rounded-circle shadow border border-4 border-white" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    <span class="position-absolute bottom-0 end-0 bg-success p-2 rounded-circle border border-2 border-white" title="Aktywny"></span>
                </div>

                <h3 class="fw-bold text-dark mb-1">@Model.Username</h3>
                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill text-uppercase ls-1 mb-4">@Model.Role</span>

                <div class="d-grid gap-2 col-8 mx-auto">
                    <a asp-action="EditProfile" class="btn btn-dark rounded-pill shadow-sm fw-medium">
                        <i class="bi bi-pencil-square me-2"></i>Edytuj profil
                    </a>
                    <a asp-controller="Orders" asp-action="History" class="btn btn-outline-secondary rounded-pill fw-medium border-0 bg-white">
                        <i class="bi bi-clock-history me-2"></i>Historia zamówień
                    </a>
                </div>
            </div>

            <div class="col-md-8 bg-white">
                <div class="card-body p-4 p-lg-5">
                    <h6 class="text-uppercase text-muted fw-bold mb-4 ls-1 small border-bottom pb-2">Dane konta</h6>

                    <div class="row mb-3 align-items-center">
                        <div class="col-sm-4 text-muted fw-medium"><i class="bi bi-envelope me-2"></i>Email</div>
                        <div class="col-sm-8 fw-bold text-dark">@Model.Email</div>
                    </div>

                    <div class="row mb-4 align-items-center">
                        <div class="col-sm-4 text-muted fw-medium"><i class="bi bi-telephone me-2"></i>Telefon</div>
                        <div class="col-sm-8 text-dark">
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <span class="fw-bold">@Model.PhoneNumber</span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic small">Nie podano</span>
                            }
                        </div>
                    </div>

                    @if (hasEmployeeData)
                    {
                        <h6 class="text-uppercase text-success fw-bold mb-4 ls-1 small border-bottom pb-2 mt-5">
                            <i class="bi bi-briefcase me-2"></i>Karta Pracownika
                        </h6>

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-medium">Imię i nazwisko</div>
                            <div class="col-sm-8 fw-bold">@Model.FullName</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-medium">Telefon służbowy</div>
                            <div class="col-sm-8">@Model.Phone</div>
                        </div>

                        @if (Model.HireDate.HasValue && Model.HireDate != DateTime.MinValue)
                        {
                            <div class="row mb-3">
                                <div class="col-sm-4 text-muted fw-medium">Zatrudnienie</div>
                                <div class="col-sm-8">
                                    <span class="text-dark">@Model.HireDate.Value.ToShortDateString()</span>
                                    <span class="badge bg-light text-dark border ms-2">@Model.SeniorityString</span>
                                </div>
                            </div>
                        }

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-medium pt-1">Stanowiska</div>
                            <div class="col-sm-8">
                                @if (Model.PositionTags != null && Model.PositionTags.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var tag in Model.PositionTags)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success px-2 py-1 fw-normal">
                                                @tag.Name <small class="ms-1 opacity-75">(@tag.HourlyRate.ToString("F2") zł/h)</small>
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small fst-italic">Brak przypisanych stanowisk.</span>
                                }
                            </div>
                        </div>
                    }
                    else if (Model.Role == "Manager" || Model.Role == "Admin")
                    {
                        <div class="alert alert-light border rounded-3 mt-4 d-flex align-items-center">
                            <i class="bi bi-shield-check fs-3 text-primary me-3"></i>
                            <div>
                                <strong class="d-block text-primary">Konto Administracyjne</strong>
                                <small class="text-muted">Masz pełny dostęp do panelu zarządzania restauracją.</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>