@model RestaurantManager.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Mój Profil";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="row g-0">
            <div class="col-md-4 bg-light text-center py-5 d-flex flex-column align-items-center justify-content-center border-end">
                <div class="mb-4 position-relative">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                    {
                        <img src="@Model.ProfilePicturePath" alt="Avatar" class="rounded-circle shadow" style="width: 180px; height: 180px; object-fit: cover; border: 5px solid white;">
                    }
                    else
                    {
                        <img src="/images/profiles/default.png" alt="Default Avatar" class="rounded-circle shadow" style="width: 180px; height: 180px; object-fit: cover; border: 5px solid white;">
                    }
                </div>
                <h3 class="fw-bold text-primary mb-1">@Model.Username</h3>
                <span class="badge bg-secondary px-3 py-2 text-uppercase mb-3">@Model.Role</span>

                <a asp-action="EditProfile" class="btn btn-outline-primary btn-sm px-4 rounded-pill">
                    <i class="bi bi-pencil-square"></i> Edytuj Profil
                </a>
            </div>

            <div class="col-md-8">
                <div class="card-body p-5">
                    <h4 class="card-title mb-4 border-bottom pb-2">Informacje o koncie</h4>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-bold">Email:</div>
                        <div class="col-sm-8">@Model.Email</div>
                    </div>

                    @if (Model.FullName != null) // Jeśli jest pracownikiem
                    {
                        <h4 class="card-title mt-5 mb-4 border-bottom pb-2 text-success">
                            <i class="bi bi-person-badge"></i> Dane Pracownika
                        </h4>

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-bold">Imię i nazwisko:</div>
                            <div class="col-sm-8">@Model.FullName</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-bold">Telefon:</div>
                            <div class="col-sm-8">@Model.Phone</div>
                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-sm-4 text-muted fw-bold">Staż pracy:</div>
                            <div class="col-sm-8">
                                <span class="fw-bold text-dark fs-5">@Model.SeniorityString</span>
                                <small class="text-muted d-block">(zatrudniono: @(Model.HireDate?.ToShortDateString()))</small>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-bold pt-2">Moje Stanowiska:</div>
                            <div class="col-sm-8">
                                @if (Model.PositionTags != null && Model.PositionTags.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var tag in Model.PositionTags)
                                        {
                                            <div class="border rounded p-2 d-flex align-items-center shadow-sm bg-white">
                                                <span class="fw-bold me-2">@tag.Name</span>
                                                <span class="badge bg-success">@tag.HourlyRate.ToString("C")/h</span>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Brak przypisanych stanowisk.</span>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        @if (Model.Role == "Employee")
                        {
                            <div class="alert alert-warning mt-4">
                                <i class="bi bi-exclamation-triangle"></i> Twój profil pracownika nie jest jeszcze uzupełniony przez Managera.
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>