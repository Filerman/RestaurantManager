@model IEnumerable<RestaurantManager.Models.LossLog>

@{
    ViewData["Title"] = "Rejestr Strat";
    var totalLoss = Model.Sum(l => l.EstimatedValue);
}

<div class="container mt-4 mb-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Rejestr Strat</h2>
            <p class="text-muted small mb-0">Monitorowanie odpadów i uszkodzeń</p>
        </div>
        <a asp-action="Report" class="btn btn-danger rounded-pill px-4 shadow-sm fw-bold mt-3 mt-md-0">
            <i class="bi bi-plus-lg me-2"></i>Zgłoś nową stratę
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 mb-4 bg-white">
        <div class="card-body p-3">
            <form asp-action="Index" method="get" class="row g-2 align-items-center justify-content-end">
                <div class="col-auto">
                    <label class="col-form-label fw-bold text-muted small text-uppercase me-2">Od:</label>
                </div>
                <div class="col-auto">
                    <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control form-control-sm border-secondary border-opacity-25 bg-light fw-medium" />
                </div>
                <div class="col-auto">
                    <label class="col-form-label fw-bold text-muted small text-uppercase mx-2">Do:</label>
                </div>
                <div class="col-auto">
                    <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control form-control-sm border-secondary border-opacity-25 bg-light fw-medium" />
                </div>
                <div class="col-auto ms-2">
                    <button type="submit" class="btn btn-primary btn-sm fw-bold shadow-sm px-3">Filtruj</button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm fw-medium ms-1">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-warning border-0 shadow-sm rounded-4 d-flex justify-content-between align-items-center mb-4 px-4 py-3">
        <div class="d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill fs-4 me-3 text-warning"></i>
            <span class="text-dark fw-medium">Suma strat w wybranym okresie:</span>
        </div>
        <strong class="fs-4 text-dark">@totalLoss.ToString("C2")</strong>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light small text-uppercase text-muted">
                        <tr>
                            <th class="ps-4 py-3 fw-bold">Data</th>
                            <th class="fw-bold">Przedmiot</th>
                            <th class="text-center fw-bold">Ilość</th>
                            <th class="fw-bold">Kategoria</th>
                            <th class="fw-bold">Opis</th>
                            <th class="text-end fw-bold">Wartość</th>
                            <th class="fw-bold">Zgłosił</th>
                            <th class="text-end pe-4 fw-bold">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    <i class="bi bi-trash-fill fs-1 d-block mb-2 opacity-25"></i>
                                    Brak zarejestrowanych strat w tym okresie.
                                </td>
                            </tr>
                        }

                        @foreach (var item in Model)
                        {
                            string itemName = item.MenuItem != null ? item.MenuItem.Name : item.CustomItemName;
                            string itemIcon = item.MenuItem != null ? "bi-basket" : "bi-box-seam";

                            <tr class="border-bottom-0">
                                <td class="ps-4 text-muted small">
                                    @item.DateReported.ToString("yyyy-MM-dd")<br />
                                    @item.DateReported.ToString("HH:mm")
                                </td>
                                <td>
                                    <div class="fw-bold text-dark d-flex align-items-center">
                                        <i class="bi @itemIcon me-2 text-secondary"></i> @itemName
                                    </div>
                                </td>
                                <td class="text-center fw-bold text-dark">@item.Quantity</td>
                                <td>
                                    <span class="badge bg-secondary bg-opacity-10 text-dark border fw-normal px-2 py-1">@item.LossType</span>
                                </td>
                                <td class="small text-muted text-truncate" style="max-width: 200px;" title="@item.Description">
                                    @item.Description
                                </td>
                                <td class="text-end fw-bold text-danger">@item.EstimatedValue.ToString("C2")</td>
                                <td class="small text-muted">
                                    @(item.ReportedByUser?.Username ?? $"ID: {item.ReportedByUserId}")
                                </td>
                                <td class="text-end pe-4">
                                    <form asp-action="Delete" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć ten wpis?');" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger border-0 rounded-2" title="Usuń">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>