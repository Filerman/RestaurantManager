@model IEnumerable<RestaurantManager.Models.Announcement>

@{
    ViewData["Title"] = "Zarządzaj Aktualnościami";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Aktualności</h2>
            <p class="text-muted small mb-0">Zarządzaj treściami widocznymi dla klientów.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
            <i class="bi bi-plus-lg me-2"></i>Dodaj nowe
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase small text-muted fw-bold">Tytuł</th>
                        <th class="py-3 text-uppercase small text-muted fw-bold">Widoczne Od</th>
                        <th class="py-3 text-uppercase small text-muted fw-bold">Do kiedy</th>
                        <th class="py-3 text-uppercase small text-muted fw-bold">Status</th>
                        <th class="text-end pe-4 py-3 text-uppercase small text-muted fw-bold">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">Brak ogłoszeń w systemie.</td>
                        </tr>
                    }

                    @foreach (var item in Model)
                    {
                        var now = DateTime.Now;
                        var isFuture = item.ValidFrom > now;
                        var isExpired = item.ValidUntil.HasValue && item.ValidUntil < now;
                        var isActive = !isFuture && !isExpired;

                        <tr class="border-bottom-0">
                            <td class="ps-4">
                                <span class="fw-bold text-dark">@item.Title</span>
                            </td>
                            <td class="text-secondary small">@item.ValidFrom.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-secondary small">
                                @(item.ValidUntil.HasValue? item.ValidUntil.Value.ToString("dd.MM.yyyy") : "—")
                            </td>
                            <td>
                                @if (isFuture)
                                {
                                    <span class="badge bg-warning-soft text-warning rounded-pill border border-warning px-2"><i class="bi bi-clock me-1"></i>Planowane</span>
                                }
                                else if (isExpired)
                                {
                                    <span class="badge bg-secondary-soft text-secondary rounded-pill border border-secondary px-2">Archiwum</span>
                                }
                                else
                                {
                                    <span class="badge bg-success-soft text-success rounded-pill border border-success px-2"><i class="bi bi-check-circle me-1"></i>Aktywne</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary border-0 rounded-2 me-1" title="Edytuj"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0 rounded-2" title="Usuń"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .bg-warning-soft {
        background-color: rgba(255, 193, 7, 0.1);
    }

    .bg-secondary-soft {
        background-color: rgba(108, 117, 125, 0.1);
    }

    .bg-success-soft {
        background-color: rgba(25, 135, 84, 0.1);
    }

    .bg-primary-soft {
        background-color: rgba(13, 110, 253, 0.1);
    }
</style>