@model RestaurantManager.ViewModels.AnnouncementViewModel

@{
    ViewData["Title"] = "Edytuj Ogłoszenie";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white py-3 border-bottom-0 rounded-top-4">
                    <h4 class="mb-0 fw-bold text-primary"><i class="bi bi-pencil-square me-2"></i>Edycja Ogłoszenia</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ExistingImagePath" />

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label fw-bold small text-uppercase ls-1">Tytuł</label>
                            <input asp-for="Title" class="form-control form-control-lg bg-light" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label fw-bold small text-uppercase ls-1">Treść</label>
                            <textarea asp-for="Content" class="form-control bg-light" rows="5"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="ValidFrom" class="form-label fw-bold small text-uppercase ls-1">Widoczne od</label>
                                <input asp-for="ValidFrom" class="form-control bg-light" type="datetime-local" value="@Model.ValidFrom.ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="ValidFrom" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ValidUntil" class="form-label fw-bold small text-uppercase ls-1">Ważne do</label>
                                <input asp-for="ValidUntil" class="form-control bg-light" type="datetime-local" value="@(Model.ValidUntil.HasValue? Model.ValidUntil.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                                <div class="form-text small">Zostaw puste = bezterminowo.</div>
                                <span asp-validation-for="ValidUntil" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Image" class="form-label fw-bold small text-uppercase ls-1">Zmień zdjęcie</label>
                            <input asp-for="Image" class="form-control bg-light" type="file" accept="image/*" />

                            @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                            {
                                <div class="mt-3 p-2 border rounded bg-light d-inline-block">
                                    <p class="mb-1 text-muted small fw-bold">Aktualne:</p>
                                    <img src="@Model.ExistingImagePath" alt="Obrazek" class="rounded shadow-sm" style="max-height: 100px;" />
                                </div>
                            }
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Manage" class="btn btn-light border fw-medium px-4">Anuluj</a>
                            <button type="submit" class="btn btn-primary fw-bold px-4 shadow-sm"><i class="bi bi-save me-2"></i>Zapisz</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}