@model RestaurantManager.ViewModels.AnnouncementViewModel

@{
    ViewData["Title"] = "Edytuj Ogłoszenie";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title mb-4">Edycja Ogłoszenia</h3>
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ExistingImagePath" />

                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Content" class="control-label fw-bold"></label>
                            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ValidFrom" class="control-label fw-bold"></label>
                                <input asp-for="ValidFrom" class="form-control" type="datetime-local"
                                       value="@Model.ValidFrom.ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="ValidFrom" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ValidUntil" class="control-label fw-bold"></label>
                                <input asp-for="ValidUntil" class="form-control" type="datetime-local"
                                       value="@(Model.ValidUntil.HasValue? Model.ValidUntil.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                                <span asp-validation-for="ValidUntil" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Image" class="control-label fw-bold">Zmień Zdjęcie (opcjonalne)</label>
                            <input asp-for="Image" class="form-control" type="file" accept="image/*" />

                            @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                            {
                                <div class="mt-2">
                                    <p class="mb-1 text-muted small">Aktualne zdjęcie:</p>
                                    <img src="@Model.ExistingImagePath" alt="Current Image" style="max-height: 150px; max-width: 100%; border-radius: 5px;" />
                                </div>
                            }
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Zapisz Zmiany" class="btn btn-primary" />
                            <a asp-action="Manage" class="btn btn-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}