@model IEnumerable<RestaurantManager.Models.Announcement>

@{
    ViewData["Title"] = "Aktualności";
}

<div class="container mt-5 mb-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-dark">Aktualności</h1>
        <p class="text-muted fs-5">Bądź na bieżąco z wydarzeniami w naszym lokalu</p>
    </div>

    @if (!Model.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="alert alert-secondary text-center border-0 rounded-3 py-4">
                    <i class="bi bi-info-circle fs-4 d-block mb-2"></i>
                    Brak aktualnych ogłoszeń w tej chwili.
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-8 mb-5">
                    <div class="card shadow-sm border-0 rounded-4 overflow-hidden h-100 hover-lift transition">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <div class="ratio ratio-21x9">
                                <img src="@item.ImagePath" class="card-img-top object-fit-cover" alt="@item.Title">
                            </div>
                        }

                        <div class="card-body p-4 p-md-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-primary-soft text-primary rounded-pill px-3 py-2">Nowość</span>
                                <small class="text-muted fw-medium"><i class="bi bi-calendar3 me-1"></i> @item.ValidFrom.ToString("dd.MM.yyyy")</small>
                            </div>

                            <h3 class="card-title fw-bold mb-3 text-dark">@item.Title</h3>
                            <p class="card-text text-secondary lh-lg" style="white-space: pre-line;">@item.Content</p>

                            @if (item.ValidUntil.HasValue)
                            {
                                <div class="mt-4 pt-3 border-top d-flex align-items-center text-danger small fw-bold">
                                    <i class="bi bi-hourglass-split me-2 fs-5"></i>
                                    Oferta ważna do: @item.ValidUntil.Value.ToString("dd.MM.yyyy")
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }
</style>