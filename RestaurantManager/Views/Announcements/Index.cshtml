@model IEnumerable<RestaurantManager.Models.Announcement>

@{
    ViewData["Title"] = "Aktualności";
}

<div class="container mt-4">
    <h1 class="text-center mb-5">Aktualności i Wydarzenia</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">Brak aktualnych ogłoszeń.</div>
    }
    else
    {
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-8 mb-4">
                    <div class="card shadow-sm overflow-hidden">
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" style="max-height: 400px; object-fit: cover;">
                        }

                        <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="card-title fw-bold text-primary mb-0">@item.Title</h4>
                                @* ZMIANA: DatePosted -> ValidFrom *@
                                <small class="text-muted">@item.ValidFrom.ToString("dd.MM.yyyy")</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text" style="white-space: pre-line;">@item.Content</p>
                            @if (item.ValidUntil.HasValue)
                            {
                                <div class="mt-3 pt-2 border-top text-end">
                                    <small class="text-danger">
                                        <i class="bi bi-clock-history"></i> Ważne do: @item.ValidUntil.Value.ToString("dd.MM.yyyy")
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>