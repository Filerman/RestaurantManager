@model RestaurantManager.Models.Announcement

@{
    ViewData["Title"] = "Usuń Ogłoszenie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 text-center">
                    <div class="mb-3 text-danger">
                        <i class="bi bi-exclamation-circle" style="font-size: 3rem;"></i>
                    </div>
                    <h4 class="card-title fw-bold mb-3">Usuwasz ogłoszenie</h4>
                    <p class="text-muted mb-4">Czy na pewno chcesz bezpowrotnie usunąć ogłoszenie <strong>"@Model.Title"</strong>?</p>

                    <div class="bg-light p-3 rounded-3 mb-4 text-start small">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="text-muted">Widoczne od:</span>
                            <span class="fw-bold">@Model.ValidFrom.ToString("dd.MM.yyyy HH:mm")</span>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Manage" class="btn btn-light border px-4">Anuluj</a>
                        <button type="submit" class="btn btn-danger fw-bold px-4 shadow-sm">Tak, usuń</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>