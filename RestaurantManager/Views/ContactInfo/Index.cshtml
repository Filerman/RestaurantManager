@model RestaurantManager.Models.ContactInfo
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Kontakt";
    var openingHours = ViewBag.OpeningHours as List<RestaurantManager.Models.OpeningHour>;

    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
    var isLogged = userId.HasValue;

    var polishDays = new Dictionary<DayOfWeek, string>
    {
        { DayOfWeek.Monday, "Poniedziałek" }, { DayOfWeek.Tuesday, "Wtorek" }, { DayOfWeek.Wednesday, "Środa" },
        { DayOfWeek.Thursday, "Czwartek" }, { DayOfWeek.Friday, "Piątek" }, { DayOfWeek.Saturday, "Sobota" }, { DayOfWeek.Sunday, "Niedziela" }
    };
}

<div class="container mt-5 mb-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-dark">@Model.RestaurantName</h1>
        <p class="text-muted fs-5">Zapraszamy do kontaktu i odwiedzin!</p>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 h-100 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="fw-bold text-dark mb-0"><i class="bi bi-geo-alt-fill text-primary me-2"></i> Dane kontaktowe</h5>
                </div>
                <div class="card-body p-4 d-flex flex-column justify-content-center">

                    <div class="d-flex align-items-start mb-4">
                        <div class="icon-wrapper bg-primary-soft text-primary me-3 flex-shrink-0 fs-4" style="width:50px; height:50px; display:flex; align-items:center; justify-content:center; border-radius:12px;">
                            <i class="bi bi-building"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold text-uppercase text-muted small ls-1 mb-1">Adres</h6>
                            <p class="fs-5 mb-0 text-dark">
                                @Model.AddressStreet<br />
                                @Model.AddressZipCode @Model.AddressCity
                            </p>
                        </div>
                    </div>

                    <div class="d-flex align-items-start mb-4">
                        <div class="icon-wrapper bg-success-soft text-success me-3 flex-shrink-0 fs-4" style="width:50px; height:50px; display:flex; align-items:center; justify-content:center; border-radius:12px;">
                            <i class="bi bi-telephone-fill"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold text-uppercase text-muted small ls-1 mb-1">Telefon</h6>
                            <a href="tel:@Model.PhoneNumber" class="text-decoration-none text-dark fs-5 hover-underline fw-bold">@Model.PhoneNumber</a>
                        </div>
                    </div>

                    <div class="d-flex align-items-start">
                        <div class="icon-wrapper bg-warning-soft text-warning me-3 flex-shrink-0 fs-4" style="width:50px; height:50px; display:flex; align-items:center; justify-content:center; border-radius:12px;">
                            <i class="bi bi-envelope-fill"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold text-uppercase text-muted small ls-1 mb-1">Email</h6>
                            <a href="mailto:@Model.ContactEmail" class="text-decoration-none text-dark fs-5 hover-underline">@Model.ContactEmail</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 h-100 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="fw-bold text-dark mb-0"><i class="bi bi-clock-fill text-secondary me-2"></i> Godziny Otwarcia</h5>
                </div>
                <div class="card-body p-0">
                    @if (openingHours != null && openingHours.Any())
                    {
                        <table class="table table-hover align-middle mb-0 h-100">
                            <tbody>
                                @foreach (var day in openingHours)
                                {
                                    var isToday = DateTime.Now.DayOfWeek == day.DayOfWeek;
                                    <tr class="@(isToday ? "bg-light" : "")">
                                        <td class="ps-4 border-bottom-0 py-3 @(isToday ? "fw-bold text-primary" : "text-secondary")">
                                            @polishDays[day.DayOfWeek]
                                            @if (isToday)
                                            {
                                                <span class="badge bg-primary ms-2 small">Dziś</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4 border-bottom-0 py-3">
                                            @if (day.IsClosed)
                                            {
                                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-2 fw-normal">Zamknięte</span>
                                            }
                                            else
                                            {
                                                <span class="fw-bold text-dark">@day.OpenTime.ToString(@"hh\:mm") - @day.CloseTime.ToString(@"hh\:mm")</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center h-100 p-5">
                            <p class="text-muted mb-0 text-center">Godziny otwarcia nie zostały jeszcze ustalone.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-4 bg-primary text-white overflow-hidden">
                <div class="card-body p-4 p-md-5 text-center">
                    <h3 class="fw-bold mb-3 text-white"><i class="bi bi-chat-heart-fill me-2"></i>Masz pytania?</h3>
                    <p class="mb-4 text-white text-opacity-75 fs-5">Skontaktuj się bezpośrednio z naszą obsługą lub managerem. Jesteśmy tu dla Ciebie!</p>

                    @if (isLogged)
                    {
                        <a asp-controller="Support" asp-action="Create" class="btn btn-light text-primary fw-bold px-5 py-3 rounded-pill shadow-sm hover-scale transition">
                            <i class="bi bi-send-fill me-2"></i> Wyślij wiadomość
                        </a>
                    }
                    else
                    {
                        <div class="d-inline-block bg-white bg-opacity-10 rounded-4 px-4 py-3 border border-white border-opacity-25">
                            <span class="text-white">Chcesz wysłać zgłoszenie?</span>
                            <a asp-controller="Auth" asp-action="Login" class="text-white fw-bold text-decoration-underline ms-1 hover-text-warning">Zaloguj się</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-primary-soft {
        background-color: rgba(13, 110, 253, 0.1);
    }

    .bg-success-soft {
        background-color: rgba(25, 135, 84, 0.1);
    }

    .bg-warning-soft {
        background-color: rgba(255, 193, 7, 0.1);
    }

    .hover-underline:hover {
        text-decoration: underline !important;
    }

    .hover-scale:hover {
        transform: scale(1.05);
    }

    .transition {
        transition: all 0.3s ease;
    }

    .hover-text-warning:hover {
        color: #ffc107 !important;
    }
</style>