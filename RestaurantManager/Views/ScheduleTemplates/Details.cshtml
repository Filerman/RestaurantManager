@model RestaurantManager.Models.ScheduleTemplate

@{
    ViewData["Title"] = "Szczegóły Szablonu Grafiku";
    // Słownik do mapowania DayOfWeek na polskie nazwy
    var polishDays = new Dictionary<DayOfWeek, string>
    {
        { DayOfWeek.Monday, "Poniedziałek" },
        { DayOfWeek.Tuesday, "Wtorek" },
        { DayOfWeek.Wednesday, "Środa" },
        { DayOfWeek.Thursday, "Czwartek" },
        { DayOfWeek.Friday, "Piątek" },
        { DayOfWeek.Saturday, "Sobota" },
        { DayOfWeek.Sunday, "Niedziela" }
    };
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Szablon: @Model.Name</h4>
    <hr />
    <h5>Zdefiniowane zmiany (sloty):</h5>
    @if (Model.ShiftSlots == null || !Model.ShiftSlots.Any())
    {
        <p class="text-muted">Brak zdefiniowanych zmian w tym szablonie.</p>
    }
    else
    {
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>Dzień</th>
                    <th>Start</th>
                    <th>Koniec</th>
                    <th>Wymagany Tag</th>
                    <th>Ilość Prac.</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slot in Model.ShiftSlots)
                {
                    <tr>
                        <td>@polishDays[slot.DayOfWeek]</td>
                        <td>@slot.StartTime.ToString(@"hh\:mm")</td>
                        <td>@slot.EndTime.ToString(@"hh\:mm")</td>
                        <td>@slot.RequiredPositionTag?.Name</td>
                        <td>@slot.RequiredEmployeeCount</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>