@model IEnumerable<RestaurantManager.Models.GalleryImage>

@{
    ViewData["Title"] = "Galeria";
}

<style>
    /* Proste style dla galerii */
    .gallery-item {
        margin-bottom: 20px;
    }

        .gallery-item img {
            width: 100%;
            height: 250px; /* Stała wysokość */
            object-fit: cover; /* Kadrowanie, aby pasowało */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

            .gallery-item img:hover {
                transform: scale(1.05);
            }

        .gallery-item .caption {
            text-align: center;
            margin-top: 5px;
            font-style: italic;
            color: #555;
        }
</style>

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />

@if (!Model.Any())
{
    <p class="text-center">W galerii nie ma jeszcze żadnych zdjęć.</p>
}
else
{
    <div class="row">
        @foreach (var image in Model)
        {
            <div class="col-md-4 gallery-item">
                <a href="@Url.Content(image.FilePath)" target="_blank">
                    <img src="@Url.Content(image.FilePath)" alt="@(image.Caption ?? "Zdjęcie z galerii")" class="img-fluid" />
                </a>
                @if (!string.IsNullOrEmpty(image.Caption))
                {
                    <div class="caption">
                        @image.Caption
                    </div>
                }
            </div>
        }
    </div>
}