@model RestaurantManager.Models.Reservation

@{
    ViewData["Title"] = "Usuń Rezerwację";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4 text-center">
                    <div class="mb-3 text-danger">
                        <i class="bi bi-calendar-x" style="font-size: 3rem;"></i>
                    </div>
                    <h4 class="card-title fw-bold mb-3">Usuwasz rezerwację</h4>
                    <p class="text-muted mb-4 small">Czy na pewno chcesz usunąć tę rezerwację z systemu?</p>

                    <div class="bg-light p-3 rounded-3 mb-4 text-start small border">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Data:</span>
                            <span class="fw-bold text-dark">@Model.DateTime.ToString("dd.MM.yyyy HH:mm")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Klient:</span>
                            <span class="fw-bold text-dark">@Model.CustomerName</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Stolik:</span>
                            <span class="fw-bold text-primary">@(Model.Table?.Name ?? "Brak")</span>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-light border px-4 rounded-pill fw-medium">Anuluj</a>
                        <button type="submit" class="btn btn-danger px-4 rounded-pill fw-bold shadow-sm">Tak, usuń</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>