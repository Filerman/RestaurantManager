@model RestaurantManager.Models.Reservation
@{
    ViewData["Title"] = "Delete reservation";
}

<h2>Delete reservation</h2>

<p>Are you sure you want to delete this reservation?</p>

<ul class="list-group w-50">
    <li class="list-group-item"><strong>Date&nbsp;/&nbsp;time:</strong> @Model.DateTime:g</li>
    <li class="list-group-item"><strong>Guest:</strong> @Model.CustomerName</li>
    <li class="list-group-item"><strong>Phone:</strong> @Model.Phone</li>
    <li class="list-group-item"><strong>Party size:</strong> @Model.PartySize</li>
    <li class="list-group-item"><strong>Table:</strong> @(Model.Table?.Name ?? "Brak")</li>
</ul>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>