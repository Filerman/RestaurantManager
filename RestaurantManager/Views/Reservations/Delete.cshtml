@model RestaurantManager.Models.Reservation

@{
    ViewData["Title"] = "Usuń Rezerwację";
}

<div class="container mt-4">
    <h3 class="text-danger">Czy na pewno chcesz usunąć tę rezerwację?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Data</dt>
        <dd class="col-sm-9">@Model.DateTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-3">Klient</dt>
        <dd class="col-sm-9">@Model.CustomerName</dd>

        <dt class="col-sm-3">Telefon</dt>
        <dd class="col-sm-9">@Model.CustomerPhone</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.CustomerEmail</dd>

        <dt class="col-sm-3">Stolik</dt>
        <dd class="col-sm-9">
            @if (Model.Table != null)
            {
                <span>@Model.Table.Name (@Model.Table.Capacity os.)</span>
            }
            else
            {
                <span>Brak</span>
            }
        </dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>