@model IEnumerable<RestaurantManager.Models.Reservation>
@{
    ViewData["Title"] = "Reservations";
}

<h2>Reservations</h2>
<a asp-action="Create" class="btn btn-primary mb-3">New reservation</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date&nbsp;/&nbsp;time</th>
            <th>Guest</th>
            <th>Party</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.DateTime.ToString("g")</td>
                <td>@r.CustomerName (@r.Phone)</td>
                <td>@r.PartySize</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
