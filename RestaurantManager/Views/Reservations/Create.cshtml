@model RestaurantManager.Models.Reservation

@{
    ViewData["Title"] = "Nowa Rezerwacja";
}

<div class="container mt-4">
    <h2>Złóż Rezerwację</h2>
    <p class="text-muted">Wypełnij formularz, aby zarezerwować stolik. Otrzymasz potwierdzenie po weryfikacji przez obsługę.</p>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="DateTime" class="control-label"></label>
                    <input asp-for="DateTime" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CustomerName" class="control-label"></label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CustomerPhone" class="control-label"></label>
                    <input asp-for="CustomerPhone" class="form-control" />
                    <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CustomerEmail" class="control-label"></label>
                    <input asp-for="CustomerEmail" class="form-control" />
                    <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TableId" class="control-label">Preferowany Stolik</label>
                    <select asp-for="TableId" class="form-control" asp-items="ViewBag.TableId">
                        <option value="">-- Wybierz stolik --</option>
                    </select>
                    <span asp-validation-for="TableId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Zarezerwuj" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}