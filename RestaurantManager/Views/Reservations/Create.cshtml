@model RestaurantManager.Models.Reservation
@{
    ViewData["Title"] = "New reservation";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="w-50">
    <div class="mb-3">
        <label asp-for="CustomerName" class="form-label"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DateTime" class="form-label"></label>
        <input asp-for="DateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="DateTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PartySize" class="form-label"></label>
        <input asp-for="PartySize" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
