@model RestaurantManager.Models.Reservation

@{
    ViewData["Title"] = "Nowa Rezerwacja";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0 text-center">
                    <h4 class="mb-0 fw-bold text-primary"><i class="bi bi-calendar-event me-2"></i>Zarezerwuj Stolik</h4>
                    <p class="text-muted small mb-0 mt-1">Wypełnij formularz, aby złożyć rezerwację.</p>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-25">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="DateTime" class="form-control rounded-3" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                            <label asp-for="DateTime">Data i godzina</label>
                            <span asp-validation-for="DateTime" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="CustomerName" class="form-control rounded-3" placeholder="Jan Kowalski" />
                            <label asp-for="CustomerName">Imię i nazwisko</label>
                            <span asp-validation-for="CustomerName" class="text-danger small"></span>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="CustomerPhone" class="form-control rounded-3" placeholder="Telefon" />
                                    <label asp-for="CustomerPhone">Telefon</label>
                                    <span asp-validation-for="CustomerPhone" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="CustomerEmail" class="form-control rounded-3" placeholder="Email" />
                                    <label asp-for="CustomerEmail">Email</label>
                                    <span asp-validation-for="CustomerEmail" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <select asp-for="TableId" class="form-select rounded-3" asp-items="ViewBag.TableId">
                                <option value="">-- Dowolny / Wybierz na miejscu --</option>
                            </select>
                            <label asp-for="TableId">Preferowany stolik (opcjonalnie)</label>
                            <span asp-validation-for="TableId" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill fw-bold shadow-sm">
                                <i class="bi bi-check-lg me-2"></i> Złóż Rezerwację
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none small text-center">Anuluj i wróć</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}