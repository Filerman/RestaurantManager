@model List<RestaurantManager.Models.OpeningHour>
@{
    ViewData["Title"] = "Godziny Otwarcia";
    var polishDays = new Dictionary<DayOfWeek, string>
    {
        { DayOfWeek.Monday, "Poniedziałek" },
        { DayOfWeek.Tuesday, "Wtorek" },
        { DayOfWeek.Wednesday, "Środa" },
        { DayOfWeek.Thursday, "Czwartek" },
        { DayOfWeek.Friday, "Piątek" },
        { DayOfWeek.Saturday, "Sobota" },
        { DayOfWeek.Sunday, "Niedziela" }
    };
}

<div class="container mt-4">
    <h2>Zarządzanie Godzinami Otwarcia</h2>
    <hr />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="Update" method="post">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Dzień</th>
                    <th>Otwarte od</th>
                    <th>Otwarte do</th>
                    <th>Zamknięte?</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" name="hours[@i].Id" value="@Model[i].Id" />
                            <strong>@polishDays[Model[i].DayOfWeek]</strong>
                        </td>
                        <td>
                            <input type="time" class="form-control" name="hours[@i].OpenTime" value="@Model[i].OpenTime.ToString(@"hh\:mm")" />
                        </td>
                        <td>
                            <input type="time" class="form-control" name="hours[@i].CloseTime" value="@Model[i].CloseTime.ToString(@"hh\:mm")" />
                        </td>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="hours[@i].IsClosed" value="true" @(Model[i].IsClosed ? "checked" : "") />
                                <input type="hidden" name="hours[@i].IsClosed" value="false" />
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    </form>
</div>