@model RestaurantManager.Models.Table

@{
    ViewData["Title"] = "Usuń Stolik";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-body p-4 text-center">
                    <div class="mb-3 text-danger">
                        <i class="bi bi-trash3-fill" style="font-size: 3rem;"></i>
                    </div>
                    <h4 class="card-title fw-bold mb-3">Usuwasz stolik</h4>
                    <p class="text-muted mb-4">Czy na pewno chcesz usunąć stolik <strong>"@Model.Name"</strong>?</p>

                    <div class="bg-light p-3 rounded-3 mb-4 text-start small border">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Pojemność:</span>
                            <span class="fw-bold text-dark">@Model.Capacity os.</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Status:</span>
                            <span class="fw-bold @(Model.IsAvailable ? "text-success" : "text-danger")">
                                @(Model.IsAvailable ? "Dostępny" : "Niedostępny")
                            </span>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-light border px-4 rounded-pill fw-medium">Anuluj</a>
                        <button type="submit" class="btn btn-danger px-4 rounded-pill fw-bold shadow-sm">Tak, usuń</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>