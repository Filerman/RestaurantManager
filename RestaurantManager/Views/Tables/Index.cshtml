@model IEnumerable<RestaurantManager.Models.Table>

@{
    ViewData["Title"] = "Zarządzanie Stolikami";
    int defaultOccupancy = ViewBag.DefaultOccupancyMinutes != null ? (int)ViewBag.DefaultOccupancyMinutes : 120;
}

<div class="container mt-4 mb-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Zarządzanie Stolikami</h2>
            <p class="text-muted small mb-0">Konfiguracja sali i dostępności</p>
        </div>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm fw-bold">
            <i class="bi bi-plus-lg me-2"></i>Dodaj nowy stolik
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 mb-4 bg-white overflow-hidden">
        <div class="card-body p-4 d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
            <div>
                <h5 class="fw-bold text-dark mb-1">
                    <i class="bi bi-clock-history text-primary me-2"></i>Ustawienia Rezerwacji
                </h5>
                <p class="text-muted small mb-0">
                    Określ domyślny czas zajętości stolika dla nowych rezerwacji.
                </p>
            </div>

            <form asp-action="UpdateOccupancy" method="post" class="d-flex align-items-center gap-2">
                <div class="input-group shadow-sm" style="max-width: 180px;">
                    <input type="number" name="minutes" value="@defaultOccupancy" min="30" step="15" class="form-control border-end-0 fw-bold text-center" />
                    <span class="input-group-text bg-white border-start-0 text-muted small">min</span>
                </div>
                <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">Zapisz</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light small text-uppercase text-muted">
                        <tr>
                            <th class="ps-4 py-3 fw-bold">Nazwa / Numer</th>
                            <th class="fw-bold">Pojemność</th>
                            <th class="fw-bold">Dostępność</th>
                            <th class="text-end pe-4 fw-bold">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-grid-3x3-gap fs-1 d-block mb-2 opacity-25"></i>
                                    Brak zdefiniowanych stolików.
                                </td>
                            </tr>
                        }

                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom-0">
                                <td class="ps-4 fw-bold text-dark">@item.Name</td>
                                <td>
                                    <span class="text-muted"><i class="bi bi-people-fill me-1"></i> @item.Capacity osób</span>
                                </td>
                                <td>
                                    @if (item.IsAvailable)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-2 fw-normal">
                                            <i class="bi bi-check-circle me-1"></i>Aktywny
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger rounded-pill px-2 fw-normal">
                                            <i class="bi bi-x-circle me-1"></i>Wyłączony
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary border-0 rounded-2 me-1" title="Edytuj">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary border-0 rounded-2 me-1" title="Szczegóły">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0 rounded-2" title="Usuń">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>