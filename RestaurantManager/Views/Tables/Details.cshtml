@model RestaurantManager.Models.Table

@{
    ViewData["Title"] = "Szczegóły Stolika";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-dark mb-0">Karta Stolika</h5>
                    <i class="bi bi-grid-3x3-gap text-secondary fs-4"></i>
                </div>

                <div class="card-body p-4 bg-light bg-opacity-25">
                    <div class="mb-4 text-center">
                        <h2 class="fw-bold text-dark mb-1">@Model.Name</h2>
                        <div class="d-flex justify-content-center gap-2 mt-2">
                            <span class="badge bg-white text-muted border fw-normal px-3 py-2 rounded-pill">
                                <i class="bi bi-people-fill me-1"></i> @Model.Capacity os.
                            </span>
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill fw-normal">Dostępny</span>
                            }
                            else
                            {
                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-3 py-2 rounded-pill fw-normal">Niedostępny</span>
                            }
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill fw-bold shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i>Edytuj
                        </a>
                        <a asp-action="Index" class="btn btn-light border rounded-pill fw-medium">
                            Wróć do listy
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>