@model RestaurantManager.Models.FaqItem

@{
    ViewData["Title"] = "Edytuj FAQ";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h4 class="mb-0 fw-bold text-primary"><i class="bi bi-pencil-square me-2"></i>Edycja Pytania</h4>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-25">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-4">
                            <label asp-for="Question" class="form-label fw-bold small text-uppercase text-muted ls-1">Pytanie</label>
                            <input asp-for="Question" class="form-control rounded-3" placeholder="Wpisz treść pytania..." />
                            <span asp-validation-for="Question" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Answer" class="form-label fw-bold small text-uppercase text-muted ls-1">Odpowiedź</label>
                            <textarea asp-for="Answer" class="form-control rounded-3" rows="5" placeholder="Wpisz odpowiedź..."></textarea>
                            <span asp-validation-for="Answer" class="text-danger small"></span>
                        </div>

                        <div class="form-check form-switch mb-4 p-3 bg-white rounded-3 border shadow-sm">
                            <input class="form-check-input ms-0 me-3" asp-for="IsPublic" style="margin-top: 0.15rem; transform: scale(1.2);" />
                            <label class="form-check-label fw-bold text-dark" asp-for="IsPublic">
                                Widoczne publicznie (dla klientów)
                            </label>
                            <div class="form-text mt-1 ms-1 text-muted small">
                                <i class="bi bi-info-circle me-1"></i>Jeśli odznaczone, pytanie będzie widoczne TYLKO dla zalogowanych pracowników.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end pt-2">
                            <a asp-action="Manage" class="btn btn-light border rounded-pill px-4 fw-medium">Anuluj</a>
                            <button type="submit" class="btn btn-primary rounded-pill px-5 fw-bold shadow-sm">
                                <i class="bi bi-save me-1"></i> Zapisz Zmiany
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}