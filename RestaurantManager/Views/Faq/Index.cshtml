@model IEnumerable<RestaurantManager.Models.FaqItem>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "FAQ";
    var isStaff = ViewBag.IsStaff as bool? ?? false;
    var currentFilter = ViewBag.CurrentFilter as string;

    // Sprawdzamy czy użytkownik to manager, żeby pokazać przycisk "Zarządzaj"
    var role = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
    bool isManager = (role == "Admin" || role == "Manager");
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0 fw-bold text-primary"><i class="bi bi-question-circle-fill me-2"></i>Baza Wiedzy</h2>
            <p class="text-muted">Najczęściej zadawane pytania i odpowiedzi.</p>
        </div>

        <div class="d-flex gap-2">
            @if (isStaff)
            {
                <form method="get" asp-action="Index" class="d-flex align-items-center">
                    <select name="filter" class="form-select form-select-sm border-secondary" onchange="this.form.submit()" style="min-width: 150px;">
                        <!option value="all" @(currentFilter == "all" ? "selected" : "")>Wszystkie</!option>
                        <!option value="public" @(currentFilter == "public" ? "selected" : "")>Publiczne</!option>
                        <!option value="internal" @(currentFilter == "internal" ? "selected" : "")>Wewnętrzne</!option>
                    </select>
                </form>
            }

            @if (isManager)
            {
                <a asp-action="Manage" class="btn btn-outline-dark btn-sm d-flex align-items-center">
                    <i class="bi bi-gear-fill me-1"></i> Zarządzaj
                </a>
            }
        </div>
    </div>

    <div class="accordion accordion-flush shadow-sm rounded overflow-hidden mb-5" id="faqAccordion">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center m-3">
                <i class="bi bi-info-circle me-2"></i> Brak pytań spełniających kryteria.
            </div>
        }
        else
        {
            foreach (var item in Model.Select((value, index) => new { value, index }))
            {
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading-@item.index">
                        <button class="accordion-button collapsed fw-bold text-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.index" aria-expanded="false" aria-controls="collapse-@item.index">
                            @if (!item.value.IsPublic)
                            {
                                <span class="badge bg-warning text-dark me-2" title="Widoczne tylko dla personelu"><i class="bi bi-lock-fill"></i> Staff</span>
                            }
                            @item.value.Question
                        </button>
                    </h2>
                    <div id="collapse-@item.index" class="accordion-collapse collapse" aria-labelledby="heading-@item.index" data-bs-parent="#faqAccordion">
                        <div class="accordion-body text-secondary bg-light">
                            @item.value.Answer
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="card border-0 bg-primary text-white rounded-3 overflow-hidden">
        <div class="card-body p-4 text-center">
            <h4 class="fw-bold">Nie znalazłeś odpowiedzi?</h4>
            <p class="mb-3 opacity-75">Skontaktuj się bezpośrednio z naszą obsługą lub managerem.</p>
            <a asp-controller="Support" asp-action="Create" class="btn btn-light text-primary fw-bold px-4 py-2 rounded-pill">
                <i class="bi bi-envelope-fill me-2"></i> Napisz do nas
            </a>
        </div>
    </div>
</div>