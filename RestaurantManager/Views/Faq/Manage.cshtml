@model IEnumerable<RestaurantManager.Models.FaqItem>

@{
    ViewData["Title"] = "Zarządzanie FAQ";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">Zarządzanie FAQ</h2>
            <p class="text-muted small mb-0">Edytuj pytania i odpowiedzi w Bazie Wiedzy</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
            <i class="bi bi-plus-lg me-2"></i>Dodaj Pytanie
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light small text-uppercase text-muted">
                        <tr>
                            <th class="ps-4 py-3 fw-bold" style="width: 35%;">Pytanie</th>
                            <th class="fw-bold" style="width: 40%;">Odpowiedź (skrót)</th>
                            <th class="fw-bold text-center" style="width: 15%;">Widoczność</th>
                            <th class="text-end pe-4 fw-bold" style="width: 10%;">Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-journal-x fs-1 d-block mb-2 opacity-25"></i>
                                    Brak wpisów w FAQ.
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom-0">
                                <td class="ps-4">
                                    <span class="fw-bold text-dark">@item.Question</span>
                                </td>
                                <td class="text-muted text-truncate" style="max-width: 300px;">
                                    @item.Answer
                                </td>
                                <td class="text-center">
                                    @if (item.IsPublic)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success px-2 py-1 rounded-pill fw-normal">
                                            <i class="bi bi-globe me-1"></i>Publiczne
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning border border-warning px-2 py-1 rounded-pill fw-normal text-dark">
                                            <i class="bi bi-lock-fill me-1"></i>Wewnętrzne
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary border-0 rounded-2 me-1" title="Edytuj">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Czy na pewno chcesz usunąć to pytanie?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger border-0 rounded-2" title="Usuń">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Index" class="btn btn-light border rounded-pill px-4 fw-medium text-muted hover-text-dark">
            <i class="bi bi-eye me-2"></i> Podgląd publiczny
        </a>
    </div>
</div>

<style>
    .hover-text-dark:hover {
        color: #212529 !important;
        border-color: #dee2e6 !important;
    }
</style>