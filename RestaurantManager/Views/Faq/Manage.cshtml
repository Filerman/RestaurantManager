@model IEnumerable<RestaurantManager.Models.FaqItem>

@{
    ViewData["Title"] = "Zarządzanie FAQ";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-gear-fill me-2"></i>Zarządzanie Bazą Wiedzy (FAQ)</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg me-1"></i> Dodaj Pytanie
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 40%;">Pytanie</th>
                        <th style="width: 40%;">Odpowiedź (skrót)</th>
                        <th style="width: 10%;">Widoczność</th>
                        <th style="width: 10%;" class="text-end">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Question</td>
                            <td class="text-muted text-truncate" style="max-width: 300px;">@item.Answer</td>
                            <td>
                                @if (item.IsPublic)
                                {
                                    <span class="badge bg-success">Publiczne</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Wewnętrzne</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" title="Edytuj">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Czy na pewno chcesz usunąć to pytanie?');">
                                        <button type="submit" class="btn btn-danger" title="Usuń">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <div class="p-4 text-center text-muted">Brak wpisów w FAQ.</div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-eye me-1"></i> Podgląd publiczny
        </a>
    </div>
</div>